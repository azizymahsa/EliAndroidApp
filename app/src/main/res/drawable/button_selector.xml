<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item><shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

                    <gradient android:angle="90" android:centerColor="#ddd" android:endColor="#00bcd4" android:startColor="#00bcd4" />

                    <stroke android:width="1dp" android:color="@color/color_strok" />
                </shape></item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp"><shape android:padding="10dp" android:shape="rectangle">
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

                    <solid android:color="#0000" />

                    <stroke android:width="1dp" android:color="@color/color_strok" />
                </shape></item>
        </layer-list></item>
    <item><layer-list>
            <item><shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

                    <gradient android:angle="90" android:centerColor="#00bcd4" android:endColor="#ddd" android:startColor="#ddd" />

                    <stroke android:width="1dp" android:color="#a09d9d" />
                </shape></item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp"><shape android:padding="10dp" android:shape="rectangle">
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

                    <solid android:color="#0000" />

                    <stroke android:width="1dp" android:color="@color/color_strok" />
                </shape></item>
        </layer-list></item>

</selector>