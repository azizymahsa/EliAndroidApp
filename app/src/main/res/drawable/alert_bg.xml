<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <corners android:radius="5dp" />

            <solid android:color="#eee" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape>
            <corners android:radius="5dp" />

            <gradient
                android:angle="135"
                android:centerColor="#cecfff"
                android:endColor="#6e6eff"
                android:startColor="#6e6eff" />

            <stroke
                android:width="2dp"
                android:color="@color/color_strok" />
        </shape>
    </item>
