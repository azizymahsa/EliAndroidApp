<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Bottom 2dp Shadow -->
<item>
    <shape  android:shape="rectangle">

        <solid android:color="#cedaf9" />

        <stroke
            android:width="25dp"
            android:color="#cedaf9"
            />

        <corners android:radius="190dp" />

    </shape>
</item>

<!-- White Top color -->
<item android:bottom="3px">

    <shape  android:shape="rectangle">

        <solid android:color="#2c68ff" />

        <stroke
            android:width="2dp"
            android:color="#2c68ff"
            />

        <corners android:radius="190dp" />


    </shape>

</item>


</layer-list>