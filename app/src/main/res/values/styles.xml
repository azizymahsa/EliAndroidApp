<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/app_base_color</item>
    </style>


    <style name="IconFontsMines" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-plus-and-minus.ttf</item>
    </style>

    <style name="MyListFrontContentRe">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:padding">8dp</item>
    </style>


    <style name="fancy_toolbar">
        <item name="android:layout_width">@dimen/toolbar_bottom_width_50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fb_radius">100dp</item>
        <item name="fb_textColor">@android:color/white</item>
        <item name="fb_textSize">40dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="fb_defaultColor">@android:color/transparent</item>
        <item name="fb_focusColor">@color/focusColor</item>
        <item name="fb_text">&#xe912;</item>
        <item name="android:layout_margin">5dp</item>


    </style>

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="IconFonts" parent="android:TextAppearance">
        <item name="fontPath">fonts/icomoon.ttf</item>
    </style>

    <style name="IrsansBold" parent="android:TextAppearance">
        <item name="fontPath">@string/iran_sans_bold.ttf</item>
    </style>

    <style name="IconFonts3" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-all-icons.ttf</item>
    </style>
    <style name="IconFonts4" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-all-icons.ttf</item>
    </style>

    <style name="Arrow" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello_up_and_down.ttf</item>
    </style>

    <style name="fontello_flight" parent="android:TextAppearance">
        <item name="fontPath">@string/iran_sans_normal.ttf</item>
    </style>

    <style name="fontello_plan" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-all-icons.ttf</item>
    </style>

    <style name="tahoma" parent="android:TextAppearance">
        <item name="fontPath">fonts/times.ttf</item>
    </style>


    <style name="IconUser" parent="android:TextAppearance">
        <item name="fontPath">fonts/user.ttf</item>
    </style>

    <style name="User_pass_login" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-all-icons.ttf</item>
    </style>

    <style name="IconContract" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-all-icons.ttf</item>
    </style>

    <style name="IconMenu" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-all-icons.ttf</item>
    </style>

    <style name="IconCheck" parent="android:TextAppearance">
        <item name="fontPath">fonts/fontello-check-and-close.ttf</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@string/iran_sans_bold.ttf</item>
    </style>
    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_10dp_textSize</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

</resources>
