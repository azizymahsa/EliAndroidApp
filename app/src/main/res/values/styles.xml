<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/background_back</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/background_frontt</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="MyListFrontContentRe">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:padding">8dp</item>
    </style>
    <style name="MyListButtonAction">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>

    </style>

    <style name="MyListImage">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="MyListTitle">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="StyledDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/flight_loading_background</item>

    </style>


    <style name="fancy_toolbar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="fb_radius">100dp</item>
        <item name="fb_textColor">@android:color/white</item>
        <item name="fb_textSize">40dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="fb_defaultColor">@android:color/transparent</item>
        <item name="fb_focusColor">@color/focusColor</item>
        <item name="fb_text">&#xe912;</item>
        <item name="android:layout_margin">5dp</item>


    </style>
    <style name="IconFonts" parent="android:TextAppearance">
        <item name="fontPath">fonts/icomoon.ttf</item></style>
    <style name="IconFonts2" parent="android:TextAppearance">
        <item name="fontPath">fonts/wifi.ttf</item></style>
    <style name="IrsansBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/iran_sans_bold.ttf</item></style>
</resources>
