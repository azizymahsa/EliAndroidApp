<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.reserv.myapplicationeli.views.activities.hotel.activity.ImageViewActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/shadow" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/toolbarLayout"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarLayout"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="1dp"
            android:layout_marginTop="10dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="شماره پیش فاکتور صادر شده"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"
                    android:textSize="12dp"

                    />

                <TextView
                    android:id="@+id/tvFactor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/green"
                    android:textSize="25dp"

                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv1"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="1dp"
            android:layout_marginTop="10dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:gravity="center">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="اطلاعات پرداخت"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"
                    android:textSize="12dp"

                    />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_2e"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvPaymen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/red"
                        android:textSize="12dp"

                        />
                    <RelativeLayout
                        android:id="@+id/rlPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/tvRial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="ریال"
                            android:textColor="@color/green"
                            android:textSize="14dp"
                            android:textAppearance="@style/IrsansBold"


                            />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="left|center"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textAppearance="@style/IrsansBold"
                            android:layout_toRightOf="@+id/tvRial"
                            android:text="sdfksdfkj"
                            android:layout_marginRight="10dp"


                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textAppearance="@style/IrsansBold"
                            android:layout_toRightOf="@+id/tvPrice"
                            android:text="مبلغ"


                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlPeygiri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/tvNumberFa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="ریال"
                            android:textColor="@color/green"
                            android:textSize="14dp"
                            android:textAppearance="@style/IrsansBold"


                            />
                        <TextView
                            android:id="@+id/tvNumberPeygiri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="left|center"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textAppearance="@style/IrsansBold"
                            android:layout_toRightOf="@+id/tvNumberFa"
                            android:text="شماره پیگیری"
                            android:layout_marginRight="10dp"


                            />

                        <TextView
                            android:id="@+id/tvPeygiri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textAppearance="@style/IrsansBold"
                            android:layout_toRightOf="@+id/tvNumberPeygiri"
                            android:text="شماره پیگیری"


                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv2"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="1dp"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:id="@+id/rlStatus"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/background_prefactor"
                >

                <RelativeLayout
                    android:id="@+id/rlIv"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/red">
                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/white_check"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@+id/rlIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"

                    >

                    <TextView
                        android:id="@+id/tvStatusFactor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:textColor="@color/red"
                        android:textAppearance="@style/IrsansBold"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"




                        />
                    <TextView
                        android:id="@+id/tvFactor2"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"


                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#ff9e3e"
                        android:textSize="10dp"
                        android:text="جزئیات قرار داد به ایمیل example@example.com ارسال شد"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"

                        />


                </LinearLayout>




            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <com.reserv.myapplicationeli.views.adapters.hotel.rooms.NonScrollListView
            android:id="@+id/lvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSuccses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/text_color_4d"
            android:text="پیگیر کار شما هستیم، لطفا منتظر تماس کارشناسان ما باشید"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnRPayment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btngravity_big"
            android:text="پرداخت مجدد"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_16dp_txtSize"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>



    <RelativeLayout
        android:id="@+id/rlLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ad000000"
        android:visibility="gone"
        >





        <com.wang.avi.AVLoadingIndicatorView

            android:id="@+id/avi1"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            app:indicatorColor="@color/white"
            app:indicatorName="BallSpinFadeLoaderIndicator"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>


</RelativeLayout>

