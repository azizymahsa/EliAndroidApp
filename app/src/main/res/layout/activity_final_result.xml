<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reserv.myapplicationeli.views.activities.hotel.activity.ImageViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbarLayout"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbarLayout"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="1dp"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="شماره پیش فاکتور صادر شده"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize"

                            />

                        <TextView
                            android:id="@+id/tvFactor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text=""
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_25dp_txtSize"

                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="1dp"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="اطلاعات پرداخت"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize"

                            />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/text_color_2e" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPaymen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_12dp_normal_textSize"
                                />

                            <RelativeLayout
                                android:id="@+id/rlPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tvRial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center"
                                    android:text="ریال"
                                    android:textAppearance="@style/IrsansBold"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/_13dp_normal_textSize"


                                    />

                                <TextView
                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@+id/tvRial"
                                    android:gravity="left|center"
                                    android:text="sdfksdfkj"
                                    android:textAppearance="@style/IrsansBold"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_13dp_normal_textSize"


                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/tvPrice"
                                    android:gravity="left|center"
                                    android:text="مبلغ"
                                    android:textAppearance="@style/IrsansBold"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_13dp_normal_textSize"


                                    />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlPeygiri"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tvNumberFa"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left|center"
                                    android:text="ریال"
                                    android:textAppearance="@style/IrsansBold"
                                    android:textColor="@color/green"
                                    android:textSize="14dp"


                                    />

                                <TextView
                                    android:id="@+id/tvNumberPeygiri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@+id/tvNumberFa"
                                    android:gravity="left|center"
                                    android:text="شماره پیگیری"
                                    android:textAppearance="@style/IrsansBold"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_14dp_txtSize"


                                    />

                                <TextView
                                    android:id="@+id/tvPeygiri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/tvNumberPeygiri"
                                    android:gravity="left|center"
                                    android:text="شماره پیگیری"
                                    android:textAppearance="@style/IrsansBold"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/_14dp_txtSize"


                                    />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cvStatus"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv2"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="1dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rlStatus"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/background_prefactor"
                        android:orientation="vertical"
                      >

                        <RelativeLayout
                            android:id="@+id/rlIv"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/red">

                            <ImageView
                                android:id="@+id/ivImage"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/white_check" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/rlIv"
                            android:gravity="center"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/tvStatusFactor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:gravity="center"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_18dp_normal_textSize"


                                />

                            <TextView
                                android:id="@+id/tvFactor2"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:textColor="@color/green"
                                android:textSize="@dimen/_25dp_txtSize"
                                android:visibility="gone"


                                />

                            <TextView
                                android:id="@+id/tvMail"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="جزئیات قرار داد به ایمیل example@example.com ارسال شد"
                                android:textColor="#ff9e3e"
                                android:textSize="10dp"
                                android:visibility="gone"

                                />


                        </LinearLayout>


                    </RelativeLayout>


                </android.support.v7.widget.CardView>


                <com.reserv.myapplicationeli.views.adapters.hotel.rooms.NonScrollListView
                    android:id="@+id/lvLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvSuccses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="پیگیر کار شما هستیم، لطفا منتظر تماس کارشناسان ما باشید"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp_hight"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRPayment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btngravity_big"
                android:text="پرداخت مجدد"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16dp_txtSize"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ad000000"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="@dimen/toolbar_height_70dp"
            android:layout_height="@dimen/toolbar_height_70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="circle-l.json"

            />

    </RelativeLayout>


</RelativeLayout>

