<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--header-->
    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/header_shadow"
        android:minHeight="@dimen/_45_profile"
        android:layout_alignParentTop="true">


    </RelativeLayout>
    <!--center-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_25dp_normal_iconSize"
        android:layout_below="@+id/toolbarLayout">
        <!--    " رفت و برگشت"-->
        <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginLeft="@dimen/_40dp_password"
            android:layout_marginRight="@dimen/_40dp_password"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btntwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_strock_gray_curv_narrow"
                android:gravity="center"
                android:text=" رفت و برگشت"
                android:textColor="@color/n_black_normal"
                android:layout_marginRight="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_5_flight_dp"
                android:textSize="@dimen/_12dp_normal_textSize"

                />
            <TextView
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_strock_blue_light"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_5_flight_dp"
                android:text="فقط رفت"
                android:textColor="@color/white"
                android:textSize="@dimen/_12dp_normal_textSize"

                />
        </LinearLayout>
        <!--mabda maghsad-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:weightSum="2"
            android:orientation="vertical">
            <!--مبدا-->
            <LinearLayout
                android:id="@+id/linearLayout_mabda"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="right"


                android:layout_marginTop="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblProductID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="right"
                    android:text="@string/origin"
                    android:textColor="@color/n_black_light"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:singleLine="true"
                        android:text="@string/select_origin_city"
                        android:textColor="@color/n_black_light"
                        android:textSize="@dimen/_15dp_normal_textSize"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="@dimen/_5_flight_dp"
                        android:singleLine="true"
                        android:text="&#111;"
                        android:rotationY="180"
                        android:layout_marginLeft="@dimen/_5_flight_dp"
                        android:textColor="@color/n_blue_btn"
                        android:textSize="@dimen/_24dp_textSize"
                        android:textAppearance="@style/FontsEli" />
                </LinearLayout>

                <View android:background="@color/gray_light"
                    android:layout_width = "match_parent"
                    android:layout_marginTop="@dimen/_5_flight_dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/lbl_forudgah_mabda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=" hhkghk"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12dp_normal_textSize" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/FontsEli"
                android:layout_marginLeft="@dimen/_10_flight_dp"
                android:textColor="@color/n_blue_btn"
                android:rotation="90"
                android:textSize="@dimen/_20dp_normal_textSize"
                android:text="&#67;"/>
            <!--مقصد-->
            <LinearLayout
                android:id="@+id/linearLayout_maghsad"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"

                android:layout_gravity="right"


                android:layout_marginTop="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="right"
                    android:text="@string/destination"
                    android:textColor="@color/n_black_light"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:textStyle="bold"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/tvEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:singleLine="true"
                        android:text="@string/select_destination_city"
                        android:textColor="@color/n_black_light"
                        android:textSize="@dimen/_15dp_normal_textSize"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="@dimen/_5_flight_dp"
                        android:singleLine="true"
                        android:text="&#111;"
                        android:rotationY="180"
                        android:layout_marginLeft="@dimen/_5_flight_dp"
                        android:textColor="@color/n_blue_btn"
                        android:textSize="@dimen/_24dp_textSize"
                        android:textAppearance="@style/FontsEli" />

                </LinearLayout>
                <View android:background="@color/gray_light"
                    android:layout_width = "match_parent"
                    android:layout_marginTop="@dimen/_5_flight_dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/lbl_forudgah_maghsad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="hgjgjgh "
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12dp_normal_textSize" />
            </LinearLayout>

        </LinearLayout>

        <!--date picker-->
        <LinearLayout
            android:id="@+id/linear_tarikh_az_picker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="26"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_12dp_normal_textSize"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/linear_picker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:layout_marginTop="@dimen/_7_flight_dp"
                    android:background="@color/hotel_detail_background"
                    card_view:cardCornerRadius="@dimen/_5_flight_dp"
                    card_view:cardBackgroundColor="#ffffff">
                    <LinearLayout
                        android:layout_marginTop="@dimen/_5_flight_dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.75"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:layout_marginBottom="@dimen/_5_flight_dp"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/titledate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right|bottom"


                                android:text="@string/return_date"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/n_disable"
                                android:textSize="@dimen/_12dp_normal_textSize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_10_flight_dp"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/tarikh_be_picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_5_flight_dp"
                                android:gravity="center|right"
                                android:text="@string/please_select_one"
                                android:textColor="@color/n_disable"
                                android:textSize="@dimen/_12dp_normal_textSize"/>
                            <TextView
                                android:id="@+id/tarikh_be_picker_day"
                                android:layout_width="@dimen/_25dp_normal_iconSize"
                                android:layout_height="wrap_content"

                                android:gravity="center|right"
                                android:text="24"
                                android:textColor="@color/n_disable"
                                android:textSize="@dimen/_21dp_margin"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/linear_picker_raft"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:layout_marginTop="@dimen/_7_flight_dp"
                    android:background="@color/hotel_detail_background"
                    card_view:cardCornerRadius="@dimen/_5_flight_dp"
                    card_view:cardBackgroundColor="#ffffff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_marginTop="@dimen/_5_flight_dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.75"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:layout_marginBottom="@dimen/_5_flight_dp"
                            android:gravity="right">
                                <TextView
                                    android:id="@+id/tarikh_az"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="right|bottom"


                                    android:text="@string/departure_date"
                                    android:textAppearance="@style/IrsansBold"
                                    android:textColor="@color/n_black_light"
                                    android:textSize="@dimen/_12dp_normal_textSize"
                                    android:textStyle="normal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/_10_flight_dp"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/tarikh_az_picker"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
android:layout_marginTop="@dimen/_5_flight_dp"
                                android:layout_marginRight="@dimen/_5_flight_dp"

                                android:gravity="center|right|top"
                                android:text="@string/please_select_one"
                                android:textColor="@color/n_black_dark"
                                android:textSize="@dimen/_12dp_normal_textSize"/>
                            <TextView
                                android:id="@+id/tarikh_az_picker_day"
                                android:layout_width="@dimen/_25dp_normal_iconSize"
                                android:layout_height="match_parent"


                                android:gravity="center|right|top"
                                android:text="24"
                                android:textColor="@color/n_black_dark"
                                android:textSize="@dimen/_21dp_margin"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <!--counte-->
        <LinearLayout
            android:id="@+id/lnr_pass_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginBottom="@dimen/_5_flight_dp"
            android:layout_marginTop="@dimen/_14dp_txtSize"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_7_flight_dp"
                android:background="@color/hotel_detail_background"
                card_view:cardCornerRadius="@dimen/_5_flight_dp"
                card_view:cardBackgroundColor="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:layout_marginTop="@dimen/_5_flight_dp"

                    android:layout_gravity="right"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/txtPassInf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text="@string/newborn"
                        android:textColor="@color/n_black_normal"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text=" , "
                        android:textColor="@color/n_black_normal"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView
                        android:id="@+id/txtPassChild"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text="@string/baby"
                        android:textColor="@color/n_black_normal"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text=" , "
                        android:textColor="@color/n_black_normal"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView
                        android:id="@+id/txtPassAdult"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5_flight_dp"

                        android:gravity="center"
                        android:text="@string/adault"
                        android:textColor="@color/n_black_normal"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:layout_gravity="right|center"

                        android:singleLine="true"
                        android:text="&#122;"
                        android:layout_marginLeft="@dimen/_5_flight_dp"
                        android:textColor="@color/n_blue_btn"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:textAppearance="@style/FontsEli" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!--class flight-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginBottom="@dimen/_5_flight_dp"
            android:layout_marginTop="@dimen/_14dp_txtSize"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_5_flight_dp"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtPassMen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/background_strock_gray_curv_narrow"
                    android:gravity="center"
                    android:text="@string/first"
                    android:textColor="@color/n_black_normal"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:layout_marginTop="@dimen/_5_flight_dp"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"
                    />
                <TextView
                    android:id="@+id/txtPassWom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/background_strock_gray_curv_narrow"
                    android:gravity="center"
                    android:text="@string/Business"
                    android:textColor="@color/n_black_normal"
                    android:layout_marginRight="@dimen/_5_flight_dp"
                    android:layout_marginLeft="@dimen/_5_flight_dp"
                    android:layout_marginTop="@dimen/_5_flight_dp"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"
                    />
                <TextView
                    android:id="@+id/txtPassNat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/background_strock_blue_light"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5_flight_dp"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:text="@string/Economi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12dp_normal_textSize"

                    />

            </LinearLayout>
        </LinearLayout>
        <!--button search-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginBottom="@dimen/_5_flight_dp"
            android:layout_marginTop="@dimen/_14dp_txtSize"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:background="@drawable/button_shape"
                android:gravity="center">

                <TextView
                    android:id="@+id/searchPlan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/search"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16dp_normal_textSize" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>