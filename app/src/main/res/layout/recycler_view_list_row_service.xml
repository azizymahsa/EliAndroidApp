<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >





    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlTitleHotel"



        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:background="@color/color_passenger_prefactor">


        <TextView
            android:id="@+id/tvServicName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="جزئیات هتل"
            android:textAppearance="@style/IrsansBold"
            android:textColor="#4d4d4d"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center|left"

            android:text="@string/icon_arrow_up"
            android:textAppearance="@style/IconFonts"
            android:textColor="@color/text_color_2e"
            android:textSize="25dp" />

    </RelativeLayout>




    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/buttonLayout"
        android:orientation="vertical"
        app:ael_duration="400"
        app:ael_expanded="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="right"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/tvServiceFa"

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="تعداد نفرات"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="#4d4d4d"

                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvCityName"

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="تاریخ خروج از هتل"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="#4d4d4d"

                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvTypeService"

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="تاریخ ورود به هتل	"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="#4d4d4d"

                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="تاریخ تولد"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"

                    android:textSize="12dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"

                android:orientation="vertical">



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="نام سرویس"

                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"
                    android:textSize="12dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="شهر"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"

                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="نوع سرویس"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"

                    android:textSize="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="قیمت"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"

                    android:textSize="12dp" />


            </LinearLayout>


        </LinearLayout>

    </com.github.aakira.expandablelayout.ExpandableLinearLayout>
</RelativeLayout>

