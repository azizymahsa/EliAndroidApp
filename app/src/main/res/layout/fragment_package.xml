<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/citySearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="@dimen/toolbar_height_70dp"
                android:layout_height="@dimen/toolbar_height_70dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/banafsh_jahan" />

            <ImageView
                android:id="@+id/txtOption"
                android:layout_width="@dimen/_50dp_normal"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_30dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_30dp"
                android:scaleType="centerInside"
                android:src="@drawable/hotel_circle_icon" />


            <LinearLayout
                android:id="@+id/linearLayout_mabda"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_toLeftOf="@+id/txtOption"
                android:gravity="center|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblProductID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="سفر به : "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:id="@+id/txtCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="شهر سفر را انتخاب کنید"
                    android:textColor="#fff"
                    android:textSize="@dimen/_20dp_normal_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbl_city_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/_12dp_normal_textSize" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cvDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:layout_weight="0.8"
                card_view:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:id="@+id/linear_picker_return"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linear_picker"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tarikh_be"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"

                            android:layout_marginRight="@dimen/_4dp_normal_margin"
                            android:layout_marginTop="@dimen/_15dp_normal_margin"
                            android:gravity="right"
                            android:text="تاریخ برگشت"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/btn_return_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_return_date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_2dp_margin"
                                android:layout_weight="0.8"
                                android:background="#fff"
                                android:gravity="right|center"
                                android:text="انتخاب کنید"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_12dp_normal_textSize"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="@string/icon_calander"
                                android:textAppearance="@style/IconFonts"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_25dp_normal_iconSize" />

                        </LinearLayout>


                        <!-- android:text="اطلاعات مالی" -->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_picker_depart"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tarikh_az"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_4dp_normal_margin"
                            android:layout_marginTop="@dimen/_15dp_normal_margin"

                            android:gravity="right"
                            android:text="تاریخ رفت"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/btn_depart_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_depart_date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_2dp_margin"
                                android:layout_weight="0.8"
                                android:background="#fff"
                                android:gravity="right|center"
                                android:text="انتخاب کنید"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_12dp_normal_textSize"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="@string/icon_calander"
                                android:textAppearance="@style/IconFonts"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_25dp_normal_iconSize" />

                        </LinearLayout>

                        <!-- android:text="پیش نمایش" -->

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvRoom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:layout_weight="0.8"
                card_view:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:id="@+id/layout_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.33"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:padding="@dimen/_5sp_padding"
                            android:text="کودک"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_count_child"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_10dp_padding"
                            android:text="0"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_1dp_width"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_1dp_margin"
                        android:layout_marginTop="@dimen/_1dp_margin"
                        android:background="@color/room_seperator" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.33"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_5dp_padding"
                            android:text="بزرگسال"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_count_adult"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_10dp_padding"
                            android:text="1"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_1dp_margin"
                        android:layout_marginTop="@dimen/_1dp_margin"
                        android:background="@color/room_seperator" />

                    <LinearLayout
                        android:id="@+id/btn_add_room"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.33"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_5dp_padding"
                            android:text="اتاق"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txt_count_room"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_10dp_padding"
                            android:text="1"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnSearchPackage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="جستجو"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>




