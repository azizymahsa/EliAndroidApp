<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/banafsh_jahan">


            <Spinner
                android:id="@+id/spn_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_margin="@dimen/_10dp_marging">
            </Spinner>

            <ProgressBar
                android:id="@+id/prg_cities"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/linear_picker"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="15dp"
                            android:gravity="right"
                            android:text="تاریخ برگشت "
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/_2dp_padding"
                            android:textAppearance="@style/IrsansBold"/>

                        <LinearLayout
                            android:id="@+id/btn_return_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_return_date"
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:text="انتخاب کنید"
                                android:layout_marginRight="@dimen/_2dp_margin"
                                android:background="#fff"
                                android:gravity="right|center"
                                android:textSize="@dimen/text_size_12dp"
                                android:textColor="@color/text_color_2"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="match_parent"
                                android:textAppearance="@style/IconFonts"
                                android:text="@string/icon_calander"
                                android:gravity="center"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/icon_size_25dp"/>

                        </LinearLayout>



                        <!-- android:text="اطلاعات مالی" -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2dp_margin"
                            android:layout_marginRight="@dimen/_4dp_margin"
                            android:layout_marginTop="@dimen/_15dp_margin"
                            android:gravity="right"
                            android:shadowDx="-2"
                            android:shadowDy="-2"
                            android:text="تاریخ رفت"
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/_14dp_padding"
                            android:textAppearance="@style/IrsansBold"
                            />

                        <LinearLayout
                            android:id="@+id/btn_depart_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_depart_date"
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:text="انتخاب کنید"
                                android:layout_marginRight="@dimen/_2dp_margin"
                                android:background="#fff"
                                android:gravity="right|center"
                                android:textSize="@dimen/text_size_12dp"
                                android:textColor="@color/text_color_2"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="match_parent"
                                android:textAppearance="@style/IconFonts"
                                android:text="@string/icon_calander"
                                android:gravity="center"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/icon_size_25dp"/>

                        </LinearLayout>

                        <!-- android:text="پیش نمایش" -->

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/layout_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">


                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_5sp_padding"

                            android:text="کودک"
                            android:textStyle="bold"

                            android:textColor="@color/text_color_2"/>

                        <TextView
                            android:id="@+id/txt_count_child"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"
                            android:layout_gravity="center"
                            android:padding="@dimen/_10dp_padding"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_1dp_width"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_1dp_margin"
                        android:layout_marginTop="@dimen/_1dp_margin"
                        android:background="#a6a6a6" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="بزرگسال"
                            android:padding="@dimen/_5dp_padding"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_2"/>

                        <TextView
                            android:id="@+id/txt_count_adult"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:padding="@dimen/_10dp_padding"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_1dp_margin"
                        android:layout_marginTop="@dimen/_1dp_margin"
                        android:background="#a6a6a6"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="اتاق"
                            android:padding="@dimen/_5dp_padding"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_2"/>


                        <TextView
                            android:id="@+id/txt_count_room"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"
                            android:padding="@dimen/_10dp_padding"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSearchPackage"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btngravity_big"
                    android:text="@string/search_package"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_16dp_txtSize"
                    android:textStyle="bold"
                    />

            </LinearLayout>









        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>




