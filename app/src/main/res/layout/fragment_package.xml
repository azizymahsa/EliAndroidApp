<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/banafsh_jahan">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/background_strock_white"
                android:layout_margin="10sp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12sp"
                    app:srcCompat="@drawable/arw_down"
                    android:tint="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="بانکوک"
                    android:padding="12sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>



            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="12sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_picker"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tarikh_be"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:text="تاریخ برگشت "
                        android:textColor="#808080"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/tarikh_be_picker"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:background="#fff"
                        android:drawableRight="@drawable/calendaricon"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="december 11 2017"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <!-- android:text="اطلاعات مالی" -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tarikh_az"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="1dp"
                        android:gravity="right"
                        android:shadowDx="-2"
                        android:shadowDy="-2"
                        android:text="تاریخ رفت"
                        android:textColor="#808080"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/tarikh_az_picker"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="18dp"
                        android:layout_marginLeft="2dp"
                        android:background="#fff"
                        android:drawableRight="@drawable/calendaricon"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:shadowDx="-2"
                        android:shadowDy="-2"
                        android:text="10 decembre 2017"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <!-- android:text="پیش نمایش" -->

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="کودک"
                        android:textColor="#808080"
                        android:textSize="12dp"
                        android:padding="5sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:padding="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#5f5e5e"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="بزرگسال"
                        android:textColor="#808080"
                        android:textSize="12dp"
                        android:padding="5sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:padding="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#5f5e5e"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_room">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="اتاق"
                        android:textColor="#808080"
                        android:textSize="12dp"
                        android:padding="5sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:padding="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginBottom="12sp">

            <Button
                android:id="@+id/searchPackage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/btngravity_big"
                android:text="@string/search_package"
                android:textColor="#FFFFFF"
                android:textSize="11dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>




