<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
     android:background="@drawable/background_strock"
    android:gravity="right"
    android:minHeight="200dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/alert_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text=" بروزرسانی "
        android:textColor="#ffffff"
        android:textSize="19dp" />

    <View
        android:id="@+id/alert_target_seprator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="#ffff00" />

    <com.info.androidhive.slidingmenu.customViews.ConnectionMessagesHandler
        android:id="@+id/messageHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>