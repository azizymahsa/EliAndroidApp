<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_not_found_resualt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarLayout"
            android:layout_marginTop="120sp"
            android:background="@drawable/bg_banafash_with_stroke"
            android:gravity="center"
            android:paddingBottom="3sp"
            android:paddingTop="3sp"
            android:text="در تاریخ مذکور نتیجه ای یافت نشد، نزدیکترین تاریخ موجود به صورت زیر است:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/layout_availabel_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp_hight"
            android:layout_marginTop="@dimen/_60dp_hight">



            <com.reserv.myapplicationeli.views.components.SimpleRecycleView
                android:id="@+id/rcl_available_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_4dp_margin"
                android:background="@color/gray_light"
                android:layoutDirection="rtl"
                android:visibility="visible">

            </com.reserv.myapplicationeli.views.components.SimpleRecycleView>


        </LinearLayout>

        <FrameLayout xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp_hight">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp_hight"
                android:background="@color/toolbar_color" />


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center"
                android:gravity="right"
                fancy:fb_defaultColor="@android:color/transparent"
                fancy:fb_focusColor="@color/focusColor"
                fancy:fb_radius="200dp"

                fancy:fb_text=" "
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10dp_margin"
                    android:text="rfsfsdf"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@android:color/white"

                    android:textSize="@dimen/_16dp_txtSize" />


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="rfsfsdf"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/toolbar_desc_12dp"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:gravity="center"


                    />

                <RelativeLayout
                    android:id="@+id/llHome"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="left">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnHome"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        fancy:fb_defaultColor="@android:color/transparent"
                        fancy:fb_focusColor="@color/focusColor"

                        fancy:fb_radius="6dp"
                        fancy:fb_text=" "
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="25dp" />

                    <ImageView
                        android:id="@+id/e_logo"
                        android:layout_width="60dp"
                        android:layout_height="@dimen/toolbar_height_70dp"
                        android:padding="14dp"
                        android:src="@drawable/e_logo" />


                </RelativeLayout>
            </RelativeLayout>

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLayout"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100">


            <com.reserv.myapplicationeli.views.components.SimpleRecycleView
                android:id="@+id/rcl_package"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.reserv.myapplicationeli.views.components.SimpleRecycleView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/hotel_detail_background"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="140"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnNextDays"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="right"
                        fancy:fb_defaultColor="@android:color/transparent"
                        fancy:fb_focusColor="@color/focusColor"

                        fancy:fb_radius="6dp"
                        fancy:fb_text=" "
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="25dp" />


                    <TextView
                        android:id="@+id/tvNextDay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="@string/icon_arrow_left"
                        android:textAppearance="@style/IconFonts"
                        android:textColor="#4D4D4D"
                        android:textSize="26dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tvNextDay"
                        android:gravity="center"
                        android:text="روز بعد"
                        android:textColor="#4D4D4D"
                        android:textSize="14dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnLastDays"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="right"
                        fancy:fb_defaultColor="@android:color/transparent"
                        fancy:fb_focusColor="@color/focusColor"

                        fancy:fb_radius="6dp"
                        fancy:fb_text=" "
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="25dp" />

                    <TextView
                        android:id="@+id/tvLastDays"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="روز قبل"
                        android:textColor="#4D4D4D"
                        android:textSize="14dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tvLastDays"
                        android:gravity="center"
                        android:text="@string/icon_arrow_right"
                        android:textAppearance="@style/IconFonts"
                        android:textColor="#4D4D4D"
                        android:textSize="26dp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFilter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="فیلتر کردن"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvFilterIcon"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/icon_filter"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="#4D4D4D"
                    android:textSize="26dp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />


            <LinearLayout
                android:id="@+id/llSort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="مرتب کردن"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvSortIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/icon_sort"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="#4D4D4D"
                    android:textSize="26dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/loading_layout_pack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        layout="@layout/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarLayout" />

</RelativeLayout>