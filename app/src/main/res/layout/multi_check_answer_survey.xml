<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:background="@drawable/background_strock_with_in"
        android:layout_marginTop="@dimen/_45_profile"
        android:layout_marginRight="@dimen/_18dp_ff"
        android:layout_marginLeft="@dimen/_18dp_ff"
        android:layout_marginBottom="@dimen/_90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="@dimen/_20dp_normal_textSize"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleM"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/alert_header_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:text="tvTitle"
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_20dp_normal_textSize"
            android:visibility="gone"

            />


        <TextView
            android:id="@+id/tvDescM"
            android:layout_margin="@dimen/_18dp_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            android:gravity="right"
            android:text="tvDesc"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_18dp_ff" />


        <RadioGroup
            android:id="@+id/radios"
            android:layout_width="282dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_5_flight_dp"
            android:layout_gravity="right"
            android:inputType="text"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/first"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_50_flight_dp"
                android:layout_gravity="right"
                android:background="@color/white"
                android:button="@null"
                android:drawablePadding="30dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="right|center"
                android:text="first"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_18dp_ff" />

            <RadioButton
                android:id="@+id/second"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_50_flight_dp"

                android:background="@color/white"
                android:button="@null"
                android:drawablePadding="30dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="right|center"
                android:text="second"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_18dp_ff" />

            <RadioButton
                android:id="@+id/third"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_50_flight_dp"

                android:background="@color/white"
                android:button="@null"
                android:drawablePadding="30dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="right|center"
                android:text="third"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_18dp_ff" />

            <RadioButton
                android:id="@+id/four"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_50_flight_dp"

                android:background="@color/white"
                android:button="@null"
                android:drawablePadding="30dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:gravity="right|center"
                android:text="four"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_18dp_ff" />
        </RadioGroup>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>