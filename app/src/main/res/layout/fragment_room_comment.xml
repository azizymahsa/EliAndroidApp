<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    tools:context="com.eligasht.reservation.views.fragments.hotelDetail.RoomHotelFragment"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true">
    <LinearLayout

        android:id="@+id/llComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_layout"
        android:layout_marginTop="@dimen/_5dp_margin"
        android:orientation="vertical"


        >

        <com.wang.avi.AVLoadingIndicatorView

            android:id="@+id/aviComment"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10dp_margin"
            app:indicatorColor="@color/app_base_color"
            app:indicatorName="BallSpinFadeLoaderIndicator"
            android:visibility="gone"


            />

        <TextView
            android:id="@+id/tvAlertComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/NoComment"
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/text_color_2e"
            android:textSize="@dimen/_16dp_txtSize"
            android:visibility="gone" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnOneComment"
            android:layout_width="@dimen/_100dp_image"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:elevation="1dp"
            android:gravity="center|top"
            android:paddingBottom="1dp"
            android:visibility="gone"
            app:fb_defaultColor="@color/blue"
            app:fb_focusColor="@color/focusColor"
            app:fb_radius="4dp"
            app:fb_text="@string/ConfirmComment"
            app:fb_textColor="@color/white"
            app:fb_textSize="@dimen/_14dp_txtSize" />

        <LinearLayout
            android:id="@+id/llCommentContent"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:orientation="vertical"
            android:visibility="gone"


            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/cvHotel"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"

                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="1dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100dp_normal"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="@dimen/_5dp_margin"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvVoteCount"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="32"
                            android:gravity="center"
                            android:padding="5dp"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_10dp_textSize" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="100"
                            android:gravity="center">

                            <at.grabner.circleprogress.CircleProgressView
                                android:id="@+id/circleView"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                CircleProgressView:cpv_autoTextSize="true"
                                CircleProgressView:cpv_barColor="@color/text_color_2e"
                                CircleProgressView:cpv_barWidth="5dp"
                                CircleProgressView:cpv_innerContourSize="0dp"
                                CircleProgressView:cpv_outerContourSize="0dp"
                                CircleProgressView:cpv_rimColor="#eaeaea"
                                CircleProgressView:cpv_rimWidth="5dp"
                                CircleProgressView:cpv_seekMode="false"
                                CircleProgressView:cpv_showUnit="true"
                                CircleProgressView:cpv_spinColor="@color/text_color_2e"
                                CircleProgressView:cpv_textColor="@color/text_color_2e"
                                CircleProgressView:cpv_textScale="0.8"
                                CircleProgressView:cpv_unit="/۱۰"


                                CircleProgressView:cpv_unitColor="@color/colorPrimary"
                                CircleProgressView:cpv_unitPosition="right_top"
                                CircleProgressView:cpv_unitScale="1"
                                CircleProgressView:cpv_value="0" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvRecommendedPercent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:padding="5dp"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:orientation="vertical">

                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/btnComment"
                                android:layout_width="@dimen/_100dp_image"
                                android:layout_height="@dimen/_30dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:elevation="1dp"
                                android:gravity="center|top"
                                android:paddingBottom="1dp"
                                fancy:fb_defaultColor="@color/blue"
                                fancy:fb_focusColor="@color/focusColor"
                                fancy:fb_radius="4dp"
                                fancy:fb_text="@string/ConfirmComment"
                                fancy:fb_textColor="@color/white"
                                fancy:fb_textSize="@dimen/_14dp_txtSize" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="@dimen/_5dp_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
                    android:background="@drawable/comment_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnSortComment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:elevation="1dp"
                        android:paddingBottom="1dp"
                        fancy:fb_defaultColor="@color/TRANSPARENT"
                        fancy:fb_focusColor="@color/focusColor"
                        fancy:fb_radius="4dp"
                        fancy:fb_text=" "
                        fancy:fb_textColor="#ffff"
                        fancy:fb_textSize="14dp" />


                    <TextView
                        android:id="@+id/tvSortComment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_5dp_margin"
                        android:gravity="center"
                        android:padding="@dimen/_5dp_margin"
                        android:text="@string/BenefitComment"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/text_color_2e"
                        android:textSize="@dimen/_10dp_textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_10dp_margin"
                        android:layout_toRightOf="@+id/tvSortComment"
                        android:gravity="center"
                        android:text="@string/icon_sort"
                        android:textAppearance="@style/IconFonts"
                        android:textColor="@color/text_color_2e"
                        android:textSize="@dimen/icon_size_25dp"


                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvCommentCount"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:gravity="right|center"
                    android:padding="3dp"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="@color/text_color_2e"
                    android:textSize="@dimen/_14dp_txtSize" />

            </LinearLayout>

            <com.eligasht.reservation.tools.NonScrollRecyclerView
                android:id="@+id/lvComments"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp_margin"

                android:divider="@null"
                android:dividerHeight="0dp" />


        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>