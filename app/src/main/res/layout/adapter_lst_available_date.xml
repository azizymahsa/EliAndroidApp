<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp">
        <TextView
            android:id="@+id/txt_depart_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#5f5e5e"
            android:background="@drawable/bg_grey_with_stroke"
            android:textSize="@dimen/_10dp"
            android:padding="@dimen/_5sp_padding"
            android:text="1"/>

        <LinearLayout
            android:id="@+id/view_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_white_with_stroke">

            <ImageView
                android:id="@+id/img_airLine"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txt_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:text="به زودی ..."
        android:textAppearance="@style/IrsansBold"
        android:textColor="#878787"
        android:textSize="12sp" />

</FrameLayout>
