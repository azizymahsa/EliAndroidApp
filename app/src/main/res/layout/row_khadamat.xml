<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/txtServiceNameFa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.03"
            android:text="بیمه مسافرتی سامان"
            android:textColor="#000000"
            android:textSize="@dimen/_12_dp_khadamat" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"

            />
        <!-- android:src="@drawable/ic_bime_khadamat" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.57"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text=" رداخت هزینه بستری شدن رداخت هزینه بستری شدن رداخت هزینه بستری شدن رداخت هزینه بستری شدنپرداخت هزینه بستری شدن"
            android:textColor="#999999"
            android:textSize="@dimen/_10dp_khadamat" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.51"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مجموع قیمت اضافه شده"
                android:textColor="#999999"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="end"
                    android:text="ریال"
                    android:textColor="#23b574"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtServiceTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="start"
                    android:text="10,000,000"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.94"
            android:text=".. جزئیات بیشتر"
            android:textColor="#6699ff"
            android:textSize="10dp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/btnAddsabad"
            android:layout_width="@dimen/_130_khadmatdp"
            android:layout_height="23dp"
            android:background="@drawable/blue_button">

            <TextView
                android:id="@+id/txtAdd"
                android:layout_width="135dp"
                android:layout_height="match_parent"

                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="افزودن به سبد خرید"
                android:textAppearance="@style/IrsansBold"
                android:textColor="#ffffff"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/img_khadmat_row"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/tick_round_button" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>