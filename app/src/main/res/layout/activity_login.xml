<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/login_page_picture"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ورود به حساب کاربری"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAppearance="@style/IrsansBold"/>
        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" />
    </RelativeLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.42"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/txt_email"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
               android:hint="ایمیل"
                android:gravity="right|center|bottom"
                android:paddingBottom="10dp"
                android:textColorHint="@color/dark_blue"
                android:background="@null"
                android:textSize="15dp"
                android:imeOptions="actionNext"
                android:textColor="@color/dark_blue"
                android:singleLine="true"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:textAppearance="@style/User_pass_login"
                android:text="@string/icon_user_login"
                android:gravity="center|left|bottom"
                android:textSize="@dimen/_24dp_textSize"
                android:paddingLeft="8dp"
                android:paddingBottom="13dp"
                android:textColor="@color/light_blue"
             />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_blue"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/txt_password"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:hint="کلمه عبور"
                android:gravity="right|center|bottom"
                android:paddingBottom="10dp"
                android:textColorHint="@color/dark_blue"
                android:background="@null"
               android:textSize="15dp"
                android:imeOptions="actionDone"
                android:singleLine="true"

                android:textColor="@color/dark_blue"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:textAppearance="@style/User_pass_login"
                android:text="@string/icon_pass_login"
                android:gravity="center|bottom|left"
                android:textSize="@dimen/_24dp_textSize"
                android:paddingLeft="8dp"
                android:paddingBottom="13dp"

                android:textColor="@color/light_blue" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:background="@color/dark_blue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.42"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
           android:layout_marginBottom="20dp"
            android:id="@+id/layout_reset_password">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:textAppearance="@style/User_pass_login"
                android:text="@string/icon_forget_login"
                android:gravity="right|center"
                android:textSize="@dimen/_24dp_textSize"
                android:paddingRight="10dp"
                android:textColor="@color/light_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="فراموشی کلمه عبور"
                android:gravity="right|center"
                android:layout_marginRight="40dp"
                android:textColor="@color/dark_blue"
                android:textSize="15dp"/>


        </LinearLayout>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="@drawable/btngravity_big"
        android:gravity="right">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
             android:elevation="4dp"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="#96000000"
            fancy:fb_radius="0dp"
            fancy:fb_text="ورود"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:elevation="4dp"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="#96000000"
            fancy:fb_radius="0dp"
            fancy:fb_text=" ثبت نام"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="16dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10dp_padding"/>

    </RelativeLayout>

   



</LinearLayout>