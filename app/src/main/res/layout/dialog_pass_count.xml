<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="@color/n_blue_btn"
            android:text="@string/EditInput"
            android:textColor="@color/white"
            android:textSize="@dimen/_16dp_txtSize"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAppearance="@style/IrsansBold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/IrsansBold"
            android:textSize="@dimen/_12dp_normal_textSize"
            android:text=""
            android:padding="14dp"
            android:textColor="#2e3192"
            android:visibility="gone"
            />



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_25dp_normal_iconSize"
            android:layout_marginBottom="@dimen/_25dp_normal_iconSize"

            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"

            android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/_10_flight_dp"
                        android:layout_marginLeft="@dimen/_10dp_margin"
                        android:layout_marginRight="@dimen/_10_flight_dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnMinesB"
                            android:layout_width="@dimen/_30dp_f_h"
                            android:layout_height="@dimen/_30dp_f_h"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/background_strock"
                            android:text="@string/mines"
                            android:textAppearance="@style/IconFontsMines"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <com.eligasht.reservation.views.ticker.TickerView
                            android:id="@+id/txtCountB"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"


                            android:layout_marginRight="@dimen/_10dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/n_black_dark"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:textStyle="bold"
                            card_view:ticker_defaultCharacterList="number" />

                        <Button
                            android:id="@+id/btnPlusB"
                            android:layout_width="@dimen/_30dp_f_h"
                            android:layout_height="@dimen/_30dp_f_h"
                            android:layout_margin="1dp"
                            android:background="@drawable/background_strock"
                            android:text="@string/plus"
                            android:textAppearance="@style/IconFontsMines"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView
                            android:id="@+id/txtBO"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:gravity="right|center"
                            android:text="@string/adault"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>
                    <!-- ///////////////koodak////////////////// -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/_10_flight_dp"
                        android:layout_marginLeft="@dimen/_10dp_margin"
                        android:layout_marginRight="@dimen/_10dp_margin"
                        android:layout_weight="100">

                        <Button
                            android:id="@+id/btnMinesK"
                            android:layout_width="@dimen/_30dp_f_h"
                            android:layout_height="@dimen/_30dp_f_h"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/background_strock"
                            android:text="@string/mines"
                            android:textAppearance="@style/IconFontsMines"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <com.eligasht.reservation.views.ticker.TickerView
                            android:id="@+id/txtCountK"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/n_black_dark"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:textStyle="bold"
                            card_view:ticker_defaultCharacterList="number" />

                        <Button
                            android:id="@+id/btnPlusK"
                            android:layout_width="@dimen/_30dp_f_h"
                            android:layout_height="@dimen/_30dp_f_h"
                            android:layout_margin="1dp"
                            android:background="@drawable/background_strock"
                            android:text="@string/plus"
                            android:textAppearance="@style/IconFontsMines"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView
                            android:id="@+id/txtKO"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:gravity="right|center"
                            android:text="@string/baby"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>
                    <!-- //////////////////////nozad/////////////////////// -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/_10_flight_dp"
                        android:layout_marginLeft="@dimen/_10dp_margin"
                        android:layout_marginRight="@dimen/_10dp_margin"
                        android:layout_weight="100">

                        <Button
                            android:id="@+id/btnMinesN"
                            android:layout_width="@dimen/_30dp_f_h"
                            android:layout_height="@dimen/_30dp_f_h"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/background_strock"
                            android:text="@string/mines"
                            android:textAppearance="@style/IconFontsMines"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <com.eligasht.reservation.views.ticker.TickerView
                            android:id="@+id/txtCountN"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/n_black_dark"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:textStyle="bold"
                            card_view:ticker_defaultCharacterList="number" />

                        <Button
                            android:id="@+id/btnPlusN"
                            android:layout_width="@dimen/_30dp_f_h"
                            android:layout_height="@dimen/_30dp_f_h"
                            android:layout_margin="1dp"
                            android:background="@drawable/background_strock"
                            android:text="@string/plus"
                            android:textAppearance="@style/IconFontsMines"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView
                            android:id="@+id/txtNO"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:gravity="right|center"
                            android:text="@string/newborn"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>
                </LinearLayout>


    </LinearLayout>

    </LinearLayout>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnOk"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"

        fancy:fb_defaultColor="@color/n_blue_btn"
        fancy:fb_focusColor="@color/focusColor"
        fancy:fb_radius="100dp"
        fancy:fb_text="@string/IrOK"
        fancy:fb_textColor="@color/white"
        fancy:fb_textSize="@dimen/_14dp_txtSize"
        android:layout_marginBottom="@dimen/_10dp_margin"
       />
</LinearLayout>