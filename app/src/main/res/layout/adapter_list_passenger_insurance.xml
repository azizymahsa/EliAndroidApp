<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card_passenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:orientation="vertical"
        android:background="@drawable/background_strock_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_birthday"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_14dp_txtSize">
                <TextView
                    android:id="@+id/txt_birthday"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:text="تاریخ تولد انتخاب کنید"
                    android:gravity="center|right"
                    android:textSize="@dimen/_14dp_txtSize"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/IconFonts"
                    android:text="@string/icon_calander"
                    android:gravity="center"
                    android:textSize="@dimen/_25dp_normal_iconSize"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_passenger_title"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:text="مسافر اول"
                        android:gravity="center|right"
                        android:textSize="@dimen/_14dp_txtSize"
                        android:layout_marginRight="@dimen/_14dp_txtSize"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/IconUser"
                        android:text="@string/icon_user"
                        android:gravity="center"
                        android:textSize="@dimen/_25dp_normal_iconSize"
                        android:layout_marginRight="@dimen/_5dp_margin"
                      />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>





</LinearLayout>