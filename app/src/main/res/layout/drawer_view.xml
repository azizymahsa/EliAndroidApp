                        android:id="@+id/btnLastBuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        fancy:fb_defaultColor="@android:color/transparent"
                        fancy:fb_focusColor="#d7d7d7"
                        fancy:fb_radius="6dp"

                        fancy:fb_text=" "
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="25dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/tv1"

                        android:gravity="center"
                        android:text="خریدهای قبلی من"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/text_color_2e"
                        android:textSize="@dimen/_12dp_normal_textSize" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="@string/contract"
                        android:textAppearance="@style/IconMenu"
                        android:textColor="@color/text_color_2e"
                        android:textSize="@dimen/_30dp_normal_iconSize"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:visibility="gone">
