<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/linear_1_bargasht"
    android:gravity="left"
    android:visibility="gone"







    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvANRaft1_1_bargasht"
            android:layout_width="30dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivArrow"
            android:text="IKA"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_12dp_normal_textSize" />

        <ImageView
            android:id="@+id/ivArrow"

            android:layout_width="@dimen/_200dp_fh"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:gravity="right"
            android:padding="4dp"
            android:src="@drawable/gray_line"
            android:layout_gravity="center"
            android:textColor="#486b6b"
            android:textSize="10dip"
            android:visibility="visible"
            android:rotation="180"/>

        <TextView
            android:id="@+id/tvANRaft1_2_bargasht"

            android:layout_width="@dimen/_30dp_fh"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_toRightOf="@+id/ivArrow"
            android:text="IKA"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_12dp_normal_textSize" />

    </LinearLayout>
</LinearLayout>