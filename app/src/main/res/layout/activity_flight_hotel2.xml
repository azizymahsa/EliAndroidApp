<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/citySearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/banafsh_jahan" />

        <ImageView
            android:id="@+id/ivHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hotel_circle_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/ivHotel"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                />
            <LinearLayout
                android:id="@+id/linearLayout_mabda"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:layout_gravity="right"
                android:layout_toLeftOf="@+id/ivHotel"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/lblProductID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="right"
                    android:text="سفر به : "
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/txtCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" استانبول "
                    android:textColor="#fff"
                    android:textSize="24dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbl_city_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Istanbul,Turkey "
                    android:textColor="#fff"
                    android:textSize="12dip"
                    android:layout_marginLeft="@dimen/margin_5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_maghsad"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:layout_gravity="right"
                android:layout_toLeftOf="@+id/ivHotel"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="right"
                    android:text="شهر مبدا : "
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/tvMabda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" استانبول "
                    android:textColor="#fff"
                    android:textSize="24dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMabdaEn"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Istanbul,Turkey "
                    android:textColor="#fff"
                    android:textSize="12dip"
                    android:layout_marginLeft="@dimen/margin_5dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                />
        </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cvDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/hotel_detail_background"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tarikh_be"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:background="#fff"
                        android:gravity="right"
                        android:text="تاریخ برگشت "
                        android:textSize="@dimen/text_size_12dp"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/text_color_2"
                        />

                    <TextView
                        android:id="@+id/tarikh_az"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="100"
                        android:background="#fff"
                        android:gravity="right"
                        android:text="تاریخ رفت"
                        android:textColor="@color/text_color_2"
                        android:textSize="@dimen/text_size_12dp"
                        android:textAppearance="@style/IrsansBold"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tvBargasht"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="انتخاب کنید"
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"


                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/icon_calander"
                            android:textAppearance="@style/IconFonts"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/icon_size_25dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="100"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRaft"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="انتخاب کنید"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/text_size_12dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/icon_calander"
                            android:textAppearance="@style/IconFonts"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/icon_size_25dp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/hotel_detail_background"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/llRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:text="کودک"
                        android:textColor="@color/text_color_2"
                        />

                    <TextView
                        android:id="@+id/tvChild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/text_color_2"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#a6a6a6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.80"
                        android:gravity="center"
                        android:text="بزرگسال"
                        android:textColor="@color/text_color_2"/>

                    <TextView
                        android:id="@+id/tvAdult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.86"
                        android:gravity="center"
                        android:textColor="@color/text_color_2"
                        android:text="1"
                        />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#a6a6a6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:orientation="vertical"
                    android:id="@+id/btn_add_room">

                    <TextView
                        android:id="@+id/lblRoomCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="اتاق"
                        android:textColor="@color/text_color_2"
                        />

                    <TextView
                        android:id="@+id/txtRoomCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.86"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/text_color_2"
                        />


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/searchHotel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/btngravity_big"
            android:shadowColor="@color/drawer_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="جستجو هتل"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>