<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Award"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="تخفیف جنسی"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/AwardR"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="تخفیف ریالی"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/Credit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="مدت اعتبار"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="قیمت"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/Fee"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="نرخ"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/UnitRatio"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="نسبت"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/SecondUnit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="واحد فرعی"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/CountUnit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="واحد اصلی"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/Amount"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="مقدار"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/LStock"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="موجودی منطقی"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/Stock"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="موجودی"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/goodName"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="نام کالا"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/goodCode"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="کد کالا"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_strok" />

        <TextView
            android:id="@+id/row"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ردیف"
            android:textColor="@color/Text_Row"
            android:textSize="@dimen/text_row" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/items_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>