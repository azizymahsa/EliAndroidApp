<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="@dimen/_10_flight_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_10dp"
                    android:gravity="center"
                    android:text="تغییر کلمه عبور"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="#000"
                    android:textSize="@dimen/_title_password" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp_password"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/changePass_username_current"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint=" کلمه عبور فعلی را وارد کنید"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColorHint="#454545"
                        android:textSize="@dimen/_15dp_normal_textSize" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="کلمه عبور فعلی"
                        android:textColor="#d7d7d7"
                        android:textSize="@dimen/text_size_12dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp_password"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/changePass_username_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint=" کلمه عبور جدید را وارد کنید"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColorHint="#454545"
                        android:textSize="@dimen/_15dp_normal_textSize" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"

                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="کلمه عبور جدید"
                        android:textColor="#d7d7d7"
                        android:textSize="@dimen/text_size_12dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp_password"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/changePass_username_new_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint=" تکرار کلمه عبور جدید را وارد کنید"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColorHint="#454545"
                        android:textSize="@dimen/_15dp_normal_textSize" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingBottom="@dimen/_10dp_padding"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:singleLine="true"
                        android:text="تکرار کلمه عبور "
                        android:textColor="#d7d7d7"
                        android:textSize="@dimen/text_size_12dp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e8e8e8" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>