<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/linearKol"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView"
            android:layout_width="8dp"
            android:layout_height="10dp"
            android:layout_gravity="right"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/pin_icon_for_items"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.02"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5_flight_dp"
            android:background="@drawable/background_strock_gray"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp_margin">


            <TextView
                android:id="@+id/txtHotel"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dpTabletSize"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="هتل"
                android:textColor="@color/train_gray"
                android:textSize="@dimen/_10dp_textSize" />
            <TextView
                android:id="@+id/txtSaloonName"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="4تخته طوس"
                android:textColor="@color/train_gray"
                android:textSize="@dimen/_10dp_textSize"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txtCompartmentCapacity"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="کوپه 4 نفره"
                android:textColor="@color/train_gray"
                android:textSize="@dimen/_10dp_textSize"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txtSeatsRemaining"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/_10dpTabletSize"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="ظرفیت5نفر"
                android:maxLines="1"
                android:textColor="@color/train_gray"
                android:textSize="@dimen/_10dp_textSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fronttop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:minHeight="40dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:layout_marginRight="3dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="left|bottom"
                        android:layout_gravity="left|center">

                        <TextView
                            android:id="@+id/txtTrainArrivalTime"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10dpTabletSize"
                            android:gravity="left|bottom"
                            android:text="TK898"
                            android:textAppearance="@style/tahoma"
                            android:textColor="#003399"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView

                        android:id="@+id/lblTrainNumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10dpTabletSize"
                        android:text="شماره قطار545 "
                        android:textAppearance="@style/tahoma"
                        android:textColor="#aaa"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:maxLines="1"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="2"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/txtTrainTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|center_vertical"
                            android:gravity="right"
                            android:text=",21:05"
                            android:textAppearance="@style/tahoma"
                            android:textColor="#003399"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblArrivalCityNameFaR"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|center_vertical"
                            android:gravity="right"
                            android:text="پنجشنبه"
                            android:textColor="#003399"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llRaft"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35dp"
                    android:layout_marginRight="2dp"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10dpTabletSize"
                        android:text="@string/arrow_left_por"
                        android:textAppearance="@style/IconFontsTrain"
                        android:textColor="@color/gray_dark"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="@dimen/_100dpflight"
                        android:layout_height="@dimen/_1dp_width"
                        android:background="@color/gray_dark" />

                    <View

                        android:layout_width="@dimen/_15_flight_dp"
                        android:layout_height="@dimen/_1dp_width"
                        android:background="@color/gray_dark" />

                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="@dimen/_100dpflight"
                        android:layout_height="@dimen/_1dp_width"
                        android:background="@color/gray_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/empty_circle"
                        android:textAppearance="@style/IconFonts4"
                        android:textColor="@color/gray_dark"
                        android:textSize="14dp" />


                </LinearLayout>
                <!--  android:layout_alignParentRight="true"-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35dp"
                    android:layout_marginRight="3dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/txtDestinationText"
                            android:layout_width="90dp"

                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10dpTabletSize"

                            android:gravity="left"
                            android:text="تهران"
                            android:textColor="#000"
                            android:textSize="@dimen/_12dp_normal_textSize" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView

                            android:id="@+id/lblAirConditioning"
                            android:layout_width="@dimen/_25dp_normal_iconSize"
                            android:layout_height="@dimen/_25dp_normal_iconSize"
                            android:layout_gravity="center|center_vertical"

                            android:gravity="center"

                            android:text="@string/air_conditioner_ic"
                            android:textAppearance="@style/IconFontsTrain"
                            android:textColor="#aaa"
                            android:textSize="@dimen/_18dp_ff" />
                        <TextView

                            android:id="@+id/lblHasMedia"
                            android:layout_width="@dimen/_25dp_normal_iconSize"
                            android:layout_height="@dimen/_25dp_normal_iconSize"
                            android:layout_gravity="center|center_vertical"

                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5_flight_dp"
                            android:text="@string/media_ic"
                            android:textAppearance="@style/IconFontsTrain"
                            android:textColor="#aaa"
                            android:textSize="@dimen/_18dp_ff" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="2"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/txtSourceText"
                            android:layout_width="90dp"

                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10dpTabletSize"

                            android:gravity="right"
                            android:text="تهران"
                            android:textColor="#000"
                            android:textSize="@dimen/_12dp_normal_textSize" />


                    </LinearLayout>

                </LinearLayout>
                <!-- /////////////////////////Bargasht/////////////////////////////// -->


                <!-- ///////////////////////////////////////////////////// -->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"

                >

                <TextView
                    android:id="@+id/txtPin"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="@string/icon_pin"
                    android:textAppearance="@style/IconFonts"

                    android:textColor="#aaaaaa"
                    android:textSize="12sp"
                    android:visibility="invisible" />


                <com.wang.avi.AVLoadingIndicatorView

                    android:id="@+id/avi"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="@dimen/_40dp_f"
                    android:layout_height="@dimen/_40dp_f"
                    android:layout_centerInParent="true"
                    android:visibility="visible"
                    app:indicatorColor="@color/app_base_color"
                    app:indicatorName="BallSpinFadeLoaderIndicator" />

                <ImageView
                    android:id="@+id/imgTrainlineNameEn"
                    android:layout_width="@dimen/_40dp_f"
                    android:layout_height="@dimen/_40dp_f"


                    android:layout_centerInParent="true"

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"

                    />
                <ImageView

                    android:layout_width="@dimen/toolbar_height_70dp"
                    android:layout_height="@dimen/toolbar_height_70dp"

                    android:background="@drawable/background_strock_gray_curv"
                    android:layout_centerInParent="true"

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"

                    />
                <TextView
                    android:id="@+id/txtNameTrain"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="@dimen/_5_flight_dp"
                    android:layout_above="@+id/imgTrainlineNameEn"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Raja"
                    android:textAppearance="@style/IconFonts"

                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>

        <!-- ////////////////////////////front bottom///////////////////////////////////// -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/sorati"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp_margin">




            <TextView
                android:id="@+id/txt_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10dpTabletSize"
                android:layout_weight="0.2"
                android:background="@drawable/background_min_curve_orange"
                android:gravity="center"
                android:text="انتخاب بلیط رفت"
                android:textColor="@color/white"
                android:textSize="@dimen/_10dp_textSize" />


            <TextView
                android:id="@+id/txttedad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="فقط 4 نفر"
                android:textColor="#0e874e"
                android:textSize="@dimen/_10dp_textSize"
                android:visibility="invisible" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f5eeff"
                android:gravity="right"
                android:text="@string/Rial"
                android:textAppearance="@style/IrsansBold"

                android:textColor="#0e874e"
                android:textSize="@dimen/_13dp_normal_textSize" />

            <TextView
                android:id="@+id/txtTotalFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/_10dpTabletSize"
                android:gravity="right"
                android:text="10,000,000"
                android:textAppearance="@style/IrsansBold"
                android:textColor="#000000"
                android:textSize="@dimen/_13dp_normal_textSize"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

