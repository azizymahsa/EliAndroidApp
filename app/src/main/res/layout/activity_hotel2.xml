<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/citySearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/banafsh_jahan" />

        <ImageView
            android:id="@+id/txtOption"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_30dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_30dp"
            android:scaleType="centerInside"
            android:src="@drawable/hotel_circle_icon" />


        <LinearLayout
            android:id="@+id/linearLayout_mabda"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_gravity="right"
            android:layout_toLeftOf="@+id/txtOption"
            android:gravity="right"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/lblProductID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="2dp"
                android:gravity="right"
                android:text="سفر به : "
                android:textColor="#ffffff"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="506dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:text=" استانبول "
                android:textColor="#fff"
                android:textSize="24dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_city_english"
                android:layout_width="501dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Istanbul,Turkey "
                android:textColor="#fff"
                android:textSize="14dip" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/cvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/linear_picker"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tarikh_be"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="15dp"
                        android:gravity="right"
                        android:text="تاریخ خروج از هتل "
                        android:textSize="@dimen/text_size_12dp"
                        android:textColor="@color/text_color_2"
                        android:textStyle="bold"
                        android:paddingRight="@dimen/_2dp_padding"
                        android:textAppearance="@style/IrsansBold"/>

                    <LinearLayout
                        android:id="@+id/btn_return_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBargasht"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="match_parent"
                            android:text="انتخاب کنید"
                            android:layout_marginRight="@dimen/_2dp_margin"
                            android:background="#fff"
                            android:gravity="right|center"
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:textAppearance="@style/IconFonts"
                            android:text="@string/icon_calander"
                            android:gravity="center"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/icon_size_25dp"/>

                    </LinearLayout>



                    <!-- android:text="اطلاعات مالی" -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tarikh_az"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2dp_margin"
                        android:layout_marginRight="@dimen/_4dp_margin"
                        android:layout_marginTop="@dimen/_15dp_margin"
                        android:gravity="right"
                        android:shadowDx="-2"
                        android:shadowDy="-2"
                        android:text="تاریخ ورود به هتل"
                        android:textSize="@dimen/text_size_12dp"
                        android:textColor="@color/text_color_2"
                        android:textStyle="bold"
                        android:paddingRight="@dimen/_14dp_padding"
                        android:textAppearance="@style/IrsansBold"
                        />

                    <LinearLayout
                        android:id="@+id/btn_depart_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRaft"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="match_parent"
                            android:text="انتخاب کنید"
                            android:layout_marginRight="@dimen/_2dp_margin"
                            android:background="#fff"
                            android:gravity="right|center"
                            android:textSize="@dimen/text_size_12dp"
                            android:textColor="@color/text_color_2"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:textAppearance="@style/IconFonts"
                            android:text="@string/icon_calander"
                            android:gravity="center"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/icon_size_25dp"/>

                    </LinearLayout>

                    <!-- android:text="پیش نمایش" -->

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/layout_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">


                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_5sp_padding"

                        android:text="کودک"
                        android:textStyle="bold"

                        android:textColor="@color/text_color_2"/>

                    <TextView
                        android:id="@+id/tvChild"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="@dimen/text_size_12dp"
                        android:textColor="@color/text_color_2"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10dp_padding"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1dp_width"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_1dp_margin"
                    android:layout_marginTop="@dimen/_1dp_margin"
                    android:background="#a6a6a6" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="بزرگسال"
                        android:padding="@dimen/_5dp_padding"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_2"/>

                    <TextView
                        android:id="@+id/tvAdult"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:padding="@dimen/_10dp_padding"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_12dp"
                        android:textColor="@color/text_color_2"/>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_1dp_margin"
                    android:layout_marginTop="@dimen/_1dp_margin"
                    android:background="#a6a6a6"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:id="@+id/btn_add_room">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="اتاق"
                        android:padding="@dimen/_5dp_padding"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_2"/>


                    <TextView
                        android:id="@+id/txtRoomCount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/text_size_12dp"
                        android:textColor="@color/text_color_2"
                        android:padding="@dimen/_10dp_padding"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/searchHotel"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/btngravity_big"
                android:text="جستجوی هتل"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16dp_txtSize"
                android:textStyle="bold"
                />

        </LinearLayout>









    </LinearLayout>

</LinearLayout>