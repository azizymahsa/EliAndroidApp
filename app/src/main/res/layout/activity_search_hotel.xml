<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/rlRoot">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />


    <View
        android:id="@+id/view"
        android:layout_below="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow"/>

    <ListView
        android:id="@+id/lvHoteResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"
        android:divider="@null"
        android:dividerHeight="0dp"/>
    <View
        android:layout_above="@+id/llBottom"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/shadow3"/>
    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/hotel_detail_background"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/textColorR"
            android:gravity="center"
            android:text="فیلتر کردن"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/icon_filter"
            android:textAppearance="@style/IconFonts"
            android:gravity="center"
            android:textSize="26dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColorR" />





    </LinearLayout>


    <include
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/elNotFound"
        android:layout_below="@+id/toolbarLayout"
        android:visibility="gone"
        >




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:background="@color/hotel_detail_background"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvAlert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textAppearance="@style/IrsansBold"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/alert"
                    android:layout_centerInParent="true"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnOk"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:paddingBottom="1dp"
                    fancy:fb_defaultColor="@color/app_base_color"
                    fancy:fb_focusColor="@color/colorPrimaryDark"
                    fancy:fb_radius="0dp"
                    fancy:fb_text="بازگشت"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_textSize="18dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>


</RelativeLayout>
