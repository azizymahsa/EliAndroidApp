<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#ffffff"
              android:orientation="vertical"
   >
    

         <LinearLayout
		    android:id="@+id/linear"
	        android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:background="#ffffff"
	        android:orientation="horizontal"
	        >
      <Button
        android:id="@+id/btn_add_room"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_strock_blue_dark"
        android:shadowColor="#cccccc"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:text="اضافه کردن اتاق "
       
        android:drawableRight="@drawable/hotel_padding_drawable"
        android:textColor="#000099"
        android:textSize="14dp"
        android:paddingLeft="90dp"
        android:gravity="center" />
    
    </LinearLayout> 
    
  <LinearLayout
      android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
         android:background="#ffffff" >

           <ListView
               android:id="@+id/listCityHotel"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:divider="@color/color_strokk"
              
             
               
               />
           <!--  android:dividerHeight="1dp" -->
    </LinearLayout>

</LinearLayout>
