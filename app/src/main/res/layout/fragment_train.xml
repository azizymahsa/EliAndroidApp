<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/citySearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/banafsh_jahan" />

            <RelativeLayout
                android:id="@+id/txtOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_30dp_margin"
                android:layout_marginRight="@dimen/_30dp_margin"
                android:layout_marginTop="@dimen/_30dp"
                android:scaleType="centerInside">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"

                    android:src="@drawable/line_white" />

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"

                    android:src="@drawable/arow_but" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/txtOption"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50" />

                <LinearLayout
                    android:id="@+id/linearLayout_mabda"

                    android:layout_width="@dimen/_250dp_normal"
                    android:layout_height="0dp"
                    android:layout_gravity="right"
                    android:layout_toLeftOf="@+id/txtOption"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblProductID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:gravity="right"
                        android:text="@string/origin_colon"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15dp_normal_textSize" />

                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="لطفا شهر مبدا را انتخاب کنید"
                        android:textColor="#fff"
                        android:textSize="@dimen/_20dp_normal_textSize"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/lbl_forudgah_mabda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="  "
                        android:textColor="#fff"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_maghsad"

                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="right"
                    android:layout_toLeftOf="@+id/txtOption"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:gravity="right"
                        android:text="@string/destination_colon"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15dp_normal_textSize" />

                    <TextView
                        android:id="@+id/tvMaghsad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="لطفا شهر مقصد را انتخاب کنید"
                        android:textColor="#fff"
                        android:textSize="@dimen/_20dp_normal_textSize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_forudgah_maghsad"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="#fff"
                        android:textSize="@dimen/_12dp_normal_textSize" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" />
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/cvAdd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_0dp_margin"
            android:layout_weight="50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_32_normal_flight"
                android:layout_weight="0.6"


                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cvDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp1"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:layout_marginTop="1dp"
                    card_view:cardCornerRadius="@dimen/_10_flight_dp"
                    card_view:cardBackgroundColor="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tarikh_be"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_10dp_margin"
                                android:layout_marginTop="@dimen/_15_flight_dp"
                                android:layout_weight="80"
                                android:background="#fff"
                                android:gravity="right|center"
                                android:text="@string/return_date"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_12dp_normal_textSize"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tarikh_az"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_10dp_margin"
                                android:layout_marginTop="@dimen/_15_flight_dp"
                                android:layout_weight="80"
                                android:background="#fff"
                                android:gravity="right|center"
                                android:text="@string/departure_date"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_12dp_normal_textSize"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linear_tarikh_az_picker"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/linear_picker"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="6dp"
                                android:layout_weight="100"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tarikh_be_picker"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"

                                    android:gravity="center|right"
                                    android:text="@string/please_select_one"
                                    android:textColor="@color/text_color_2"
                                    android:textSize="@dimen/_12dp_normal_textSize"

                                    />

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_checkout"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    card_view:lottie_autoPlay="false"
                                    card_view:lottie_fileName="lottie/calendar.json"
                                    card_view:lottie_loop="false" />


                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="100"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tarikh_az_picker"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:gravity="center|right"
                                    android:text="@string/please_select_one"
                                    android:textColor="@color/text_color_2"
                                    android:textSize="@dimen/_12dp_normal_textSize"

                                    />

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottie_checkin"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    card_view:lottie_autoPlay="false"
                                    card_view:lottie_fileName="lottie/calendar.json"
                                    card_view:lottie_loop="false" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>
            <!--////////////////////////////////////////////////Tedad nafarat//////////////////////////////////////////////////////////////////////-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp1"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:layout_marginTop="@dimen/dp1"
                    android:background="@color/hotel_detail_background"
                    card_view:cardCornerRadius="@dimen/_10_flight_dp"

                    card_view:cardBackgroundColor="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">
                        <!-- ///////////////Line1////////////////// -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/_5_flight_dp"
                            android:layout_marginLeft="@dimen/_10dp_margin"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:layout_marginTop="@dimen/_5_flight_dp"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/txtPassMen"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:background="@drawable/background_strock_gray_curv_narrow"
                                android:gravity="center"
                                android:text="ویژه برادران"
                                android:textColor="@color/grayBB"
                                android:textSize="@dimen/_12dp_normal_textSize"

                                />
                            <TextView
                                android:id="@+id/txtPassWom"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:background="@drawable/background_strock_gray_curv_narrow"
                                android:gravity="center"
                                android:text="ویژه خواهران"
                                android:textColor="@color/grayBB"
                                android:layout_marginRight="@dimen/_5_flight_dp"
                                android:layout_marginLeft="@dimen/_5_flight_dp"
                                android:textSize="@dimen/_12dp_normal_textSize"

                                />
                            <TextView
                                android:id="@+id/txtPassNat"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:background="@drawable/background_strock_purple_mat"
                                android:gravity="center"
                                android:text="مسافرین عادی"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12dp_normal_textSize"

                                />

                        </LinearLayout>
                        <!-- ///////////////Line2////////////////// -->

                        <LinearLayout
                            android:id="@+id/lnr_pass_count"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/_5_flight_dp"
                            android:layout_marginTop="@dimen/_5_flight_dp"
                            android:layout_marginLeft="@dimen/_10dp_margin"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:layout_weight="100"
                            android:background="@drawable/background_strock_gray_curv">


                            <TextView
                                android:id="@+id/txtPassInf"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"

                                android:gravity="center"
                                android:text="نوزاد "
                                android:textColor="@color/grayTxt"
                                android:textSize="@dimen/_12dp_normal_textSize"

                                />
                            <TextView
                                android:id="@+id/txtPassChild"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"

                                android:gravity="center"
                                android:text="کودک "
                                android:textColor="@color/grayTxt"
                                android:textSize="@dimen/_12dp_normal_textSize"

                                />
                            <TextView
                                android:id="@+id/txtPassAdult"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"

                                android:gravity="center"
                                android:text="بزرگسال "
                                android:textColor="@color/grayTxt"
                                android:textSize="@dimen/_12dp_normal_textSize"

                                />



                        </LinearLayout>
                        <!-- //////////////////////Line3/////////////////////// -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/_5_flight_dp"
                            android:layout_marginLeft="@dimen/_10dp_margin"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:layout_weight="60"
                            android:gravity="center">

                       <!--     <RadioButton
                                android:id="@+id/rd_darbast"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="کوپه دربست"
                                android:textColor="@color/grayTxt"
                                android:textSize="@dimen/_10dp_textSize" />-->
                            <CheckBox

                                android:id="@+id/rd_darbast"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="کوپه دربست"
                                android:textColor="@color/grayTxt"
                                android:textSize="@dimen/_10dp_textSize" />


                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:background="@drawable/button_shape"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/searchTrain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/search"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16dp_normal_textSize" />
                </LinearLayout>

            </LinearLayout>
            <!--        </LinearLayout>-->
            <!--////////////////////////////////////////////////end tedad nafarat////////////////////////////////////////////////////////////////////////////////////// -->
        </LinearLayout>
    </LinearLayout>

    <!-- </ScrollView>-->

    <LinearLayout
        android:id="@+id/llButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50_flight_dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_11dp"
        android:background="@drawable/raftobargasht_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"

            android:gravity="center"
            android:text="@string/departure"
            android:textColor="#808080"
            android:textSize="@dimen/_15dp_normal_textSize"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btntwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center"
            android:text="@string/departure_and_return"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15dp_normal_textSize"
            android:visibility="visible" />


    </LinearLayout>


</RelativeLayout>