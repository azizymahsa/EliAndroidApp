<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:swipe="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:fancy="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/tools"
	android:id="@+id/rlRoot"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#ffffff"
		android:orientation="vertical"
		>



		<FrameLayout

			xmlns:fancy="http://schemas.android.com/apk/res-auto"
			android:id="@+id/toolbarLayout"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_60dp_hight"
			>

			<android.support.v7.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_60dp_hight"
				android:background="@color/toolbar_color"/>


			<!--<mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/txtBack"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                fancy:fb_defaultColor="@android:color/transparent"
                fancy:fb_focusColor="@color/focusColor"
                fancy:fb_radius="6dp"
                fancy:fb_textColor="#FFFFFF"

                android:layout_gravity="right"
                fancy:fb_textSize="25dp"
                fancy:fb_text=" "
                android:gravity="right"
                />-->
			<mehdi.sakout.fancybuttons.FancyButton
				android:id="@+id/txtBack"
				android:layout_width="@dimen/toolbar_bottom_width_50dp"
				android:layout_height="@dimen/toolbar_bottom_width_50dp"
				fancy:fb_defaultColor="@android:color/transparent"
				fancy:fb_focusColor="@color/focusColor"
				fancy:fb_radius="200dp"
				fancy:fb_textColor="#FFFFFF"

				android:layout_gravity="right|center"
				fancy:fb_textSize="@dimen/_25dp_normal_iconSize"
				fancy:fb_text=" "
				android:gravity="right"/>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center">



				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:orientation="vertical">


					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="horizontal"
						>
						<TextView
							android:id="@+id/txtCityBargashtt"
							android:layout_width="0dp"
							android:layout_weight="0.5"
							android:layout_height="wrap_content"
							android:gravity="right|center"
							android:layout_gravity="center"
							android:text="tvTitle"
							android:visibility="visible"
							android:textColor="#FFFFFF"
							android:textSize="@dimen/toolbar_title_16dp"
							/>
						<mehdi.sakout.fancybuttons.FancyButton
							android:id="@+id/txticon"
							android:layout_width="0dp"
							android:layout_weight="0.2"
							android:layout_height="wrap_content"

							android:layout_gravity="center"

							android:text="tvTitle"
							android:visibility="visible"
							fancy:fb_defaultColor="@android:color/transparent"
							fancy:fb_focusColor="@color/focusColor"
							fancy:fb_radius="6dp"
							fancy:fb_text="تهرااان "
							fancy:fb_textColor="#FFFFFF"
							fancy:fb_textSize="@dimen/icon_size_25dp" />
						<TextView
							android:id="@+id/txtCityRaft"
							android:layout_width="0dp"
							android:layout_weight="0.5"
							android:layout_height="wrap_content"
							android:layout_centerHorizontal="true"
							android:gravity="left|center"
							android:layout_gravity="center"

							android:text="tvTitle"
							android:visibility="visible"
							android:textColor="#FFFFFF"
							android:textSize="@dimen/toolbar_title_16dp"
							/>
					</LinearLayout>
					<TextView
						android:id="@+id/txtCityBargasht"
						android:layout_width="100dp"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:textColor="@android:color/white"
						android:textSize="@dimen/_12dp"
						android:layout_centerHorizontal="true"
						android:layout_marginRight="2dp"
						android:layout_below="@+id/txtCityRaft"
						android:text="tvCount"
						android:layout_marginTop="2dp"
						android:visibility="gone"/>


					<TextView
						android:id="@+id/txtDateOnvan"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"

						android:layout_gravity="center"
						android:text="asdasd"
						android:textColor="@android:color/white"
						android:textSize="@dimen/toolbar_desc_12dp"
						android:maxLines="1"


						android:ellipsize="end"/>



				</LinearLayout>


















				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:gravity="left">

					<mehdi.sakout.fancybuttons.FancyButton
						android:id="@+id/btnHome"
						android:layout_width="50dp"
						android:layout_height="match_parent"
						android:layout_gravity="right"
						android:gravity="right"
						fancy:fb_defaultColor="@android:color/transparent"
						fancy:fb_focusColor="@color/focusColor"

						fancy:fb_radius="6dp"
						fancy:fb_text=" "
						fancy:fb_textColor="#FFFFFF"
						fancy:fb_textSize="25dp" />

					<ImageView
						android:id="@+id/txt_hom"
						android:layout_width="@dimen/_30dp"
						android:layout_height="@dimen/_30dp"
						android:layout_marginTop="@dimen/_15dp_margin"
						android:layout_marginLeft="@dimen/_15dp_margin"
						android:background="@drawable/e_logo"
						/>


				</RelativeLayout>
			</RelativeLayout>






		</FrameLayout>



		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

<!--			///////////////////////PIN HEADER///////////////////////////////////-->
			<!-- //////////////////////END PIN HEADER/////////////////////////////// -->

			<!-- //////////////////////START PIN DETAIL/////////////////////////////// -->

			<!-- //////////////////////END PIN DETAIL/////////////////////////////// -->
			<android.support.v7.widget.RecyclerView
				android:id="@+id/recyclerViewPassenger"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="vertical"
				android:visibility="visible"/>
			<!-- //////////////////////START LIST VIEW/////////////////////////////// -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:orientation="vertical"
				android:layout_weight="100">
				<LinearLayout
					android:id="@+id/linear_expand"
					android:layout_below="@+id/toolbarLayout"

					android:layout_width="match_parent"
					android:layout_height="fill_parent"
					android:layout_marginTop="8dp"
					android:background="#ffffff"
					android:orientation="horizontal"
					android:visibility="visible">


					<ExpandableListView
						android:id="@+id/lvExp"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:cacheColorHint="#00000000"
						android:divider="#ffffff"
						android:groupIndicator="@null"
						/>


				</LinearLayout>

				<LinearLayout
					android:id="@+id/linear_no_result"
					android:layout_width="match_parent"
					android:layout_height="match_parent"

					android:layout_below="@+id/toolbarLayout"
					android:visibility="gone"
					>




					<android.support.v7.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_gravity="center"
						android:layout_margin="7dp"
						android:background="@color/hotel_detail_background"
						card_view:cardBackgroundColor="#ffffff"
						card_view:cardCornerRadius="3dp"
						card_view:cardElevation="2dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">
							<TextView
								android:id="@+id/txtNoResult"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:padding="10dp"
								android:layout_marginTop="10dp"
								android:textSize="16dp"
								android:textAppearance="@style/IrsansBold"
								android:gravity="center"
								android:textColor="@color/text_color_2e"
								/>

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:src="@drawable/alert"
								android:layout_centerInParent="true"/>

							<RelativeLayout
								android:layout_width="wrap_content"
								android:layout_height="40dp"

								android:layout_alignParentBottom="true"

								>
								<!--<mehdi.sakout.fancybuttons.FancyButton
									android:id="@+id/btnOk"
									android:layout_width="match_parent"
									android:layout_height="40dp"
									android:layout_gravity="center"
									android:elevation="4dp"
									android:paddingBottom="1dp"
									fancy:fb_defaultColor="@color/TRANSPARENT"
									fancy:fb_focusColor="@color/focusColor"
									fancy:fb_radius="0dp"
									fancy:fb_text="بازگشت"
									fancy:fb_textColor="#FFFFFF"
									fancy:fb_textSize="18dp"
									/>-->
								<Button
									android:id="@+id/btn_no_Result"
									android:layout_width="match_parent"
									android:layout_height="40dp"
									android:layout_gravity="center"
									android:text="بازگشت به صفحه قبل"
									android:textColor="#fff"
									android:textSize="14dp"
									android:textStyle="bold"
									android:layout_marginTop="1dp"
									android:layout_marginLeft="@dimen/_12dp"
									android:layout_marginRight="@dimen/_12dp"
									android:layout_marginBottom="2dp"
									android:background="@drawable/btngravity_big"/>
							</RelativeLayout>


						</RelativeLayout>


					</android.support.v7.widget.CardView>
				</LinearLayout>


			</LinearLayout>
			<View
				android:id="@+id/view"
				android:layout_below="@+id/toolbarLayout"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@drawable/shadow"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="7"
				android:background="@color/hotel_detail_background"
				android:orientation="horizontal"
				android:gravity="center"
				>

				<LinearLayout

					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="140"
					android:gravity="center"
					android:orientation="horizontal">
					<RelativeLayout
						android:layout_width="0dp"
						android:layout_weight="100"
						android:layout_height="wrap_content">



						<mehdi.sakout.fancybuttons.FancyButton
							android:id="@+id/btnNextDays"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							fancy:fb_defaultColor="@android:color/transparent"
							fancy:fb_focusColor="@color/focusColor"
							fancy:fb_radius="6dp"
							fancy:fb_textColor="#FFFFFF"

							android:layout_gravity="right"
							fancy:fb_textSize="25dp"
							fancy:fb_text=" "
							android:gravity="right"
							/>



						<TextView
							android:id="@+id/tvNextDay"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:text="@string/icon_arrow_left"
							android:textAppearance="@style/IconFonts"
							android:gravity="center"
							android:layout_marginLeft="5dp"
							android:textColor="#4d4d4d"
							android:textSize="@dimen/_25dp_normal_iconSize" />
						<TextView
							android:layout_toRightOf="@+id/tvNextDay"
							android:id="@+id/txtRuzeGhabl"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:gravity="center"
							android:text="روز قبل"
							android:textColor="@color/text_color_4d"
							android:textSize="@dimen/_14dp_txtSize"
							/>





					</RelativeLayout>
					<RelativeLayout
						android:layout_width="0dp"
						android:layout_weight="100"
						android:layout_height="wrap_content">

						<mehdi.sakout.fancybuttons.FancyButton
							android:id="@+id/btnLastDays"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							fancy:fb_defaultColor="@android:color/transparent"
							fancy:fb_focusColor="@color/focusColor"
							fancy:fb_radius="6dp"
							fancy:fb_textColor="#FFFFFF"

							android:layout_gravity="right"
							fancy:fb_textSize="25dp"
							fancy:fb_text=" "
							android:gravity="right"
							/>

						<TextView
							android:id="@+id/txtRuzeBad"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:gravity="center"
							android:text="روز بعد"
							android:layout_marginLeft="5dp"
							android:textColor="@color/text_color_4d"
							android:textSize="@dimen/_14dp_txtSize"							/>
						<TextView

							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:text="@string/icon_arrow_right"
							android:textAppearance="@style/IconFonts"
							android:gravity="center"
							android:textColor="#4d4d4d"
							android:textSize="@dimen/_25dp_normal_iconSize"
							android:layout_toRightOf="@+id/txtRuzeBad"/>


					</RelativeLayout>





				</LinearLayout>

				<LinearLayout
					android:id="@+id/llBottom"

					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="100"
					android:gravity="center">
					<TextView
						android:id="@+id/txtFilter"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center"
						android:text="فیلتر کردن"
						android:layout_marginLeft="5dp"
						android:textColor="@color/text_color_4d"
						android:textSize="@dimen/_14dp_txtSize"						/>
					<TextView
						android:id="@+id/iconFilter"

						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="@string/icon_filter"
						android:textAppearance="@style/IconFonts"
						android:gravity="center"
						android:layout_marginLeft="5dp"
						android:textColor="#4d4d4d"
						android:textSize="@dimen/_25dp_normal_iconSize" />
				</LinearLayout>

				<View
					android:layout_width="1dp"
					android:layout_height="match_parent"/>




				<LinearLayout
					android:id="@+id/llSort"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="100"
					android:orientation="horizontal"
					android:gravity="center">

					<TextView
						android:id="@+id/lblMoratabSazi"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center"
						android:text="مرتب کردن"
						android:layout_marginLeft="5dp"
						android:textColor="@color/text_color_4d"
						android:textSize="@dimen/_14dp_txtSize"						/>
					<TextView
						android:id="@+id/tvSortIcon"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="@string/icon_sort"
						android:textAppearance="@style/IconFonts"
						android:gravity="center"
						android:layout_marginLeft="5dp"
						android:textColor="#4d4d4d"
						android:textSize="@dimen/_25dp_normal_iconSize" />

				</LinearLayout>


			</LinearLayout>






		</LinearLayout>
<!--///////////////////////////fffffffffffffffffffffffffffffffffffffffffffffffffffff-->
	</LinearLayout>



	<include
		layout="@layout/loading_layout_parvaz"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"/>

</RelativeLayout>