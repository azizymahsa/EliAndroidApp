<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="12sp"
                    android:background="@drawable/shadowbox_big"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp">

                        <Button
                            android:id="@+id/btnMinesB"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/background_strock"
                            android:text="-"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtCountB"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top"
                            android:text="1"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/btnPlusB"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/background_strock"
                            android:text="+"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtBO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:gravity="right"
                            android:text="بزرگسال"
                            android:textColor="#000000"
                            android:textSize="11dp" />

                    </LinearLayout>
                    <!-- ///////////////koodak////////////////// -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp">

                        <Button
                            android:id="@+id/btnMinesK"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/background_strock"
                            android:text="-"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtCountK"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top"
                            android:text="0"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/btnPlusK"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/background_strock"
                            android:text="+"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txtKO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:gravity="right"
                            android:text="کودک"
                            android:textColor="#000000"
                            android:textSize="11dp" />

                    </LinearLayout>
                    <!-- //////////////////////nozad/////////////////////// -->


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اتاق اول"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                     />
                    
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>