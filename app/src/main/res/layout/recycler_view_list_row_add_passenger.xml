<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5dp_margin"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_5dp_margin"
        android:background="@color/hotel_detail_background"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0.5dp"
        android:id="@+id/cvContent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp"

               >
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/IrsansBold"
                    android:textSize="@dimen/_16dp_txtSize"
                    android:textColor="@color/text_color_4d"
                    android:text="sdfsdf"
                    android:gravity="center|left"
                    android:layout_alignParentLeft="true"

                    />
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16dp_txtSize"
                    android:textColor="@color/text_color_2e"
                    android:text="sdfsdf"
                    android:gravity="center|right"
                    android:layout_alignParentRight="true"

                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview50"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/tvTrash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/IconFonts2"
                    android:textSize="@dimen/icon_size_25dp"
                    android:textColor="@color/text_color_4d"
                    android:text="@string/trash"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

