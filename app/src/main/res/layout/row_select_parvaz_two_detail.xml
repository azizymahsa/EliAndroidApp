<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:clickable="true"
	android:id="@+id/row"
	android:background="#fff" >
	<!-- <LinearLayout
        style="@style/MyListFrontContentRe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" > -->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/back_linear_row"
		android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/fronttop"
			style="@style/MyListFrontContentRe"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff"
			android:gravity="center"
			android:minHeight="40dp"
			android:orientation="horizontal"
			android:tag="front" >

			<!--  <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"

                 /> -->

			<LinearLayout
				android:id="@+id/linearLayout1"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_gravity="right"
				android:layout_marginRight="3dip"
				android:layout_weight="0.83"
				android:gravity="right"
				android:orientation="vertical" >



				<TextView

					android:id="@+id/lblDepurtureAirportR"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"

					android:gravity="right"
					android:textSize="14dip"
					android:text="استانبول"
					android:textColor="#003399"
					/>

				<TextView
					android:id="@+id/lblFlightNumberR"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginTop="5dp"
					android:gravity="right"
					android:text="3h 45 m ,ترکیش ایر "
					android:textColor="#486b6b"
					android:textSize="12dip" />

				<TextView
					android:id="@+id/lblArrivalAirportR"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:gravity="right"
					android:text="استانبول"
					android:textColor="#003399"
					android:textSize="14dip" />

			</LinearLayout>
			<LinearLayout

				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_above="@+id/linearLayout1"
				android:layout_gravity="right"
				android:layout_marginRight="1dip"
				android:gravity="right"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/s1"
					android:layout_width="12dp"
					android:layout_height="74dp"
					android:layout_marginRight="2dp"
					android:layout_marginLeft="2dp"
					android:layout_marginTop="5dp"
					android:background="@drawable/blb"
					android:gravity="right"
					android:text=""
					android:textColor="#486b6b"
					android:textSize="12dip" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/linearLayout2"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_above="@+id/linearLayout1"
				android:layout_gravity="right"
				android:layout_marginRight="3dip"
				android:layout_weight="0.06"
				android:gravity="right"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/lblFlightTimeR"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center"
					android:text="11:40 AM"
					android:textColor="#003399"
					android:textSize="12dip" />

				<TextView

					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text=" 11:50 AM "
					android:textColor="#486b6b"
					android:textSize="12dip"
					android:visibility="invisible" />

				<TextView
					android:id="@+id/lblFlightArrivalTimeR"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="18dp"
					android:gravity="center"
					android:text="2:40 AM"
					android:textColor="#003399"
					android:textSize="12dip" />

			</LinearLayout>

		</LinearLayout>
		<!--   ////////////////////////////front bottom///////////////////////////////////// -->


		<LinearLayout
			android:id="@+id/linearTableNerkh"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="visible" >

			<TextView
				android:id="@+id/editText1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#d5d9dc"
				android:text="جدول نرخ"
				android:paddingRight="20dp"
				android:textColor="#595959"
				android:textSize="14dp"
				android:textStyle="bold" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="35dp" >

				<TextView
					android:id="@+id/textView1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="2dp"
					android:text="ریال" />

				<TextView
					android:id="@+id/txtAdlCostP"
					android:layout_width="211dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:text="12,000,000"
					android:textColor="#000000"
					android:textSize="14dp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/textView3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:gravity="right"
					android:text="قیمت پایه"
					android:paddingRight="20dp"
					android:textSize="13dp" />

			</LinearLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#e6e6e6" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="35dp" >

				<TextView
					android:id="@+id/textView9"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="2dp"
					android:text="ریال" />

				<TextView
					android:id="@+id/txtTaxes"
					android:layout_width="211dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:text="12,000,000"
					android:textColor="#000000"
					android:textSize="14dp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/textView5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:gravity="right"
					android:text=" مالیات"
					android:paddingRight="18dp"
					android:textSize="13dp" />

			</LinearLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#e6e6e6" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="35dp" >

				<TextView
					android:id="@+id/textView10"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="2dp"
					android:text="ریال"
					android:textColor="#24b574" />

				<TextView
					android:id="@+id/txtTotalFareCost"
					android:layout_width="211dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:text="12,000,000"
					android:textColor="#000000"
					android:textSize="14dp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/textView7"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:gravity="right"
					android:paddingRight="20dp"
					android:text="قابل پرداخت "
					android:textColor="#003399"
					android:textSize="13dp"
					android:textStyle="bold" />

			</LinearLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#e6e6e6" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/linearButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#fff"
			android:orientation="vertical"
			android:visibility="gone">

			<Button
				android:id="@+id/btnSelect"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="123dp"
				android:layout_height="28dp"
				android:layout_margin="5dp"
				android:layout_marginLeft="14dp"
				android:layout_marginRight="14dp"
				android:background="@drawable/btn_plan_select"
				android:text="انتخاب و رزرو"
				android:textColor="#fff"
				android:visibility="visible" />

		</LinearLayout>



	</LinearLayout>
</FrameLayout>    