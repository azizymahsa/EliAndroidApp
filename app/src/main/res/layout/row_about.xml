<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:noghteh="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffffff"
    android:id="@+id/llLayout"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
       >

    <ImageView
        android:id="@+id/iv_imageAddress"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/alert"
        android:visibility="visible"
      />




        <com.eligasht.reservation.tools.JustifiedTextView
        android:id="@+id/txtSectionName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=""

        android:padding="@dimen/_12dp"
        android:textColor="#000000"
        />

    <com.eligasht.reservation.tools.JustifiedTextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""

        android:layout_marginTop="5dp"
        android:padding="@dimen/_12dp"


        />

        <TextView
            android:id="@+id/txtSectionNameEn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="@dimen/_12dp"
            android:gravity="left"
            android:layout_gravity="left"
            android:text=""
            android:textColor="#000000"
            android:visibility="gone"/>

        <!--<TextView
            android:id="@+id/txtDescriptionEn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_gravity="left"
            android:padding="@dimen/_12dp"
            android:text="TextView"
            android:visibility="gone"

            />-->
        <WebView
            android:id="@+id/txtDescriptionEn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            tools:ignore="WebViewLayout"
            android:visibility="gone"/>
  </LinearLayout>







</LinearLayout>