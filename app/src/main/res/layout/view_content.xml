<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvBrithday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:text="تاریخ خروج از هتل"
        android:textColor="@color/text_color_2e"

        android:gravity="center"

        android:textSize="10dp"
        android:layout_marginTop="@dimen/_5dp_margin"
        android:layout_marginBottom="@dimen/_5dp_margin"
        />
    <TextView
        android:id="@+id/tvGender"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:text="تاریخ ورود به هتل	"
        android:textColor="@color/text_color_2e"

        android:gravity="center"

        android:textSize="10dp"
        android:layout_marginTop="@dimen/_5dp_margin"
        android:layout_marginBottom="@dimen/_5dp_margin"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:text="نام هتل"
        android:textColor="@color/text_color_2e"

        android:gravity="center"

        android:textSize="10dp"
        android:layout_marginTop="@dimen/_5dp_margin"
        android:layout_marginBottom="@dimen/_5dp_margin"
        />

</LinearLayout>