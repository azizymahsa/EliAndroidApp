<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/banafsh_jahan">

            <AutoCompleteTextView
                android:id="@+id/act_country"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:hint="نام کشور را وارد نمایید"
                android:textColorHint="@color/white"
                android:background="@drawable/background_strock_white"
                android:layout_margin="@dimen/_10dp_marging" />

            <ProgressBar
                android:id="@+id/prg_country"
                style="?android:attr/progressBarStyle"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center|left"
                android:layout_margin="20sp"
                android:visibility="gone"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.56"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.46"
                android:layout_margin="@dimen/_10dp_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_12dp_marginTop"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/linear_picker"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="15dp"
                            android:gravity="right"
                            android:text="مدت سفر"
                            android:textColor="#808080"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/_2dp_padding"
                            />

                        <LinearLayout
                            android:id="@+id/layout_during_travel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_during_trip"
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:text="انتخاب کنید"
                                android:layout_marginRight="@dimen/_2dp_margin"
                                android:background="#fff"
                                android:gravity="center|right"
                                android:textColor="#7c7c7c"
                                android:textSize="@dimen/_14dp_txtSize"
                                android:textStyle="bold"
                                android:paddingRight="@dimen/_5dp_padding"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="match_parent"
                                android:textAppearance="@style/IconFonts"
                                android:text="@string/icon_calander"
                                android:gravity="center"
                                android:textSize="@dimen/_24dp_textSize"/>

                        </LinearLayout>



                        <!-- android:text="اطلاعات مالی" -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2dp_margin"
                            android:layout_marginRight="@dimen/_4dp_margin"
                            android:layout_marginTop="@dimen/_15dp_margin"
                            android:gravity="right"
                            android:shadowDx="-2"
                            android:shadowDy="-2"
                            android:text="تاریخ شروع سفر"
                            android:textColor="#808080"
                            android:textSize="@dimen/_14dp_txtSize"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/_14dp_padding"

                            />

                        <LinearLayout
                            android:id="@+id/layout_depart_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_start_date"
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:text="انتخاب کنید"
                                android:layout_marginRight="@dimen/_2dp_margin"
                                android:background="#fff"
                                android:gravity="right|center"
                                android:textColor="#7c7c7c"
                                android:textSize="@dimen/_14dp_txtSize"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="match_parent"
                                android:textAppearance="@style/IconFonts"
                                android:text="@string/icon_calander"
                                android:gravity="center"
                                android:textSize="@dimen/_24dp_textSize"/>

                        </LinearLayout>

                        <!-- android:text="پیش نمایش" -->

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_margin="@dimen/_10dp_margin">
                <LinearLayout
                    android:id="@+id/layout_passenger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/txt_count_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="تعداد مسافران"
                        android:gravity="center"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/_14dp_txtSize"
                        android:textStyle="bold"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">

                <Button
                    android:id="@+id/btnSearchInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/btngravity_big"
                    android:text="جستجوی بیمه"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>




