<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/hotel_detail_background"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35dp"
                android:background="#fff4ee">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tvFlightDetail3"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:padding="5dp"
                        android:text="جزئیات هتل"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />

                    <TextView
                        android:id="@+id/tvFlightDetail2"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:padding="5dp"
                        android:text="جزئیات هتل"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/_12dp_normal_textSize" />

                    <TextView
                        android:id="@+id/tvFlightDetail"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="جزئیات هتل"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center|left"

                    android:text="@string/icon_arrow_up"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="#4d4d4d"
                    android:textSize="25dp" />

            </RelativeLayout>


            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120dp"
                android:layout_below="@id/buttonLayout"
                android:orientation="vertical"
                app:ael_duration="400"
                app:ael_expanded="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvArrAirport"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:gravity="center|right"
                            android:minHeight="@dimen/_35dp"
                            android:padding="5dp"
                            android:text="@string/people_number"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="#4d4d4d"

                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="center|right"
                            android:padding="5dp"
                            android:text="@string/return_airport"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDepAir"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:gravity="center|right"
                            android:minHeight="@dimen/_35dp"
                            android:padding="5dp"
                            android:text="@string/people_number"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="#4d4d4d"

                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView
                            android:id="@+id/tvServiceCityUi"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="center|right"
                            android:padding="5dp"
                            android:text="@string/destination_airport"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDate"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:gravity="center|right"
                            android:minHeight="@dimen/_35dp"
                            android:padding="5dp"
                            android:text="@string/people_number"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="#4d4d4d"

                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="center|right"
                            android:padding="5dp"
                            android:text="@string/date"


                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvOutTime"


                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:gravity="center|right"
                            android:minHeight="@dimen/_35dp"
                            android:padding="5dp"
                            android:text="@string/people_number"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="#4d4d4d"

                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="center|right"
                            android:padding="5dp"
                            android:text="@string/exit_time"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvInTime"


                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:gravity="center|right"
                            android:minHeight="@dimen/_35dp"
                            android:padding="5dp"
                            android:text="@string/people_number"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="#4d4d4d"

                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="center|right"
                            android:padding="5dp"
                            android:text="@string/enter_time"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvNumber"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:gravity="center|right"
                            android:minHeight="@dimen/_35dp"
                            android:padding="5dp"
                            android:text="@string/people_number"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="#4d4d4d"

                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="center|right"
                            android:padding="5dp"
                            android:text="@string/number"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAirLineName"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:gravity="center|right"
                            android:minHeight="@dimen/_35dp"
                            android:padding="5dp"
                            android:text="@string/people_number"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="#4d4d4d"

                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:gravity="center|right"
                            android:padding="5dp"
                            android:text="@string/airline"

                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                    </LinearLayout>
                </LinearLayout>
            </com.github.aakira.expandablelayout.ExpandableLinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>

