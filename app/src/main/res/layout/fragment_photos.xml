<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="108dp"
         android:layout_alignParentBottom="true"
         android:orientation="horizontal" >
        	    	
        	  <LinearLayout        	         
			        	android:layout_width="0dip"
			        	android:layout_weight="0.25"
			        	android:layout_height="match_parent"
			        	android:orientation="vertical" >
			        	<RelativeLayout android:layout_width="fill_parent"
			        	    android:layout_height="match_parent"
			        	    android:layout_gravity="center_vertical|center_horizontal" >
	        	    	  

		        	    	  <Button
		        	    	      android:id="@+id/request_mali"
		        	    	     android:layout_width="fill_parent"
	        	    	       android:layout_height="match_parent"
		        	    	      android:background="@drawable/background_strock"
		        	    	    android:text="مانده بدهی مشتری  "
		        	    	      android:gravity="center"
		        	    	      android:textStyle="bold"
		        	    	      android:shadowColor="#cccccc"
		        	    	       android:shadowDx="-2"
               						 android:shadowDy="-2"
		        	    	       android:textColor="#000000" />
		        	    	   <!-- android:text="اطلاعات مالی" -->
					 <TextView
			   	     	  android:id="@+id/imagehfghts"
			              android:layout_width="30dip"
			              android:layout_height="30dip"
			              android:layout_gravity="center_vertical"
			              android:textColor="#fff"
			              android:background="@drawable/icon_noti"
			              android:clickable="true"
			              android:textSize="10sp"
			              android:gravity="center_vertical|center_horizontal"
			              android:layout_marginTop="12dip"  
			              android:layout_marginLeft="1dip"                     
			              android:text="245"
			              android:visibility="invisible"
			               />
		        	    	  
		        	    </RelativeLayout>
        	    </LinearLayout>
        	      <LinearLayout        	         
			        	android:layout_width="0dip"
			        	android:layout_weight="0.25"
			        	android:layout_height="match_parent"
			        	android:orientation="vertical"
			        	 >
			        	<RelativeLayout android:layout_width="fill_parent"
			        	    android:layout_height="match_parent"
			        	    android:layout_gravity="center_vertical|center_horizontal" >
	        	    	  

		        	    	  <Button
		        	    	        android:id="@+id/request_moshtari"
		        	    	     android:layout_width="fill_parent"
	        	    	       android:layout_height="match_parent"
		        	    	      android:background="@drawable/background_strock"
		        	    	     android:text="اطلاعات مشتری"
		        	    	     android:textStyle="bold"
		        	    	      android:shadowColor="#cccccc"
		        	    	        android:shadowDx="-2"
              							  android:shadowDy="-2"
		        	    	      android:gravity="center"
		        	    	      android:textColor="#000000"
		        	    	      />
		        	    	   <!-- android:text="پیش نمایش" -->
					 <TextView
			   	     	  android:id="@+id/imageContacsats"
			              android:layout_width="30dip"
			              android:layout_height="30dip"
			              android:layout_gravity="center_vertical"
			              android:textColor="#fff"
			              android:background="@drawable/icon_noti"
			              android:clickable="true"
			              android:textSize="10sp"
			              android:gravity="center_vertical|center_horizontal"
			              android:layout_marginTop="12dip"  
			              android:layout_marginLeft="1dip"                     
			              android:text="245"
			              android:visibility="invisible"
			               />
		        	    	  
		        	    </RelativeLayout>
        	    </LinearLayout>
  </LinearLayout>

  

</LinearLayout>
