<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"


    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:background="@drawable/background_strock_with_in"
            android:layout_marginTop="@dimen/_45_profile"
            android:layout_marginRight="@dimen/_18dp_ff"
            android:layout_marginLeft="@dimen/_18dp_ff"
            android:layout_marginBottom="@dimen/_90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="@dimen/_20dp_normal_textSize"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/alert_header_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:text="tvTitle"
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_20dp_normal_textSize"
android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_margin="@dimen/_18dp_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            android:gravity="right"
            android:text=" "
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_18dp_ff" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarLayout"
            android:orientation="vertical"

            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp_hight"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_10dp_margin"
                card_view:cardBackgroundColor="#ffffff"
                android:layout_marginBottom="@dimen/_10dp_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35dp_normal"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/ic_arrow_drop_down"
                         />

                    <Spinner
                        android:id="@+id/languageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_10dp_margin"
                card_view:cardBackgroundColor="#ffffff"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"

                        android:gravity="center"
                        android:text="@string/icon_arrow_down"
                        android:textAppearance="@style/IconFonts"
                        android:textColor="@color/text_color_4d" />

                    <Spinner
                        android:id="@+id/curencySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:background="@null"
                        android:gravity="center" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="@string/text3"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/text_color_4d"
                        android:textSize="@dimen/_14dp_txtSize" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_10dp_margin"
                card_view:cardBackgroundColor="#ffffff"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/icon_arrow_down"
                        android:textAppearance="@style/IconFonts"
                        android:textColor="@color/text_color_4d" />

                    <Spinner
                        android:id="@+id/officeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="@string/text5"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/text_color_4d"
                        android:textSize="@dimen/_14dp_txtSize" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>


</LinearLayout>