<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:background="@drawable/background_strock_with_in"
        android:layout_marginTop="@dimen/_45_profile"
        android:layout_marginRight="@dimen/_18dp_ff"
        android:layout_marginLeft="@dimen/_18dp_ff"
        android:layout_marginBottom="@dimen/_90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="@dimen/_20dp_normal_textSize"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/n_blue_btn"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:text=" "
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_20dp_normal_textSize"
android:visibility="gone"
            />
        <!--<TextView
            android:id="@+id/tvTitle"
            android:layout_margin="@dimen/_18dp_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            android:gravity="right"
            android:text="tvTitle"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_20dp_normal_textSize" />-->

        <TextView
            android:id="@+id/tvDesc"
            android:layout_margin="@dimen/_18dp_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            android:gravity="right"
            android:text=" "
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_18dp_ff" />



        <TextView
            android:id="@+id/txtSetTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50_flight_dp"
            android:layout_margin="@dimen/_18dp_ff"
            android:gravity="center"
            android:hint="@string/_selectTime"
            android:background="@drawable/background_strock_gray"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_18dp_ff"/>

    </LinearLayout>
    </LinearLayout>



</LinearLayout>