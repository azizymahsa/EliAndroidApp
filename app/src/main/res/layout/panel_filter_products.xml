<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/visiblePane"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_vertical"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/awardPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="فیلتر ها"
                android:textColor="#fff"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <CheckBox
                android:id="@+id/credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="right|center_vertical"
                android:text="فرجه"
                android:textColor="#fff"
                android:textSize="18dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/creditL3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right|center_vertical"
                    android:padding="0dp"
                    android:text="بالاتر از 200 روز"
                    android:textColor="#fff"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/creditL2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right|center_vertical"
                    android:padding="0dp"
                    android:text="بالاتر از 150 روز"
                    android:textColor="#fff"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/creditL1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right|center_vertical"
                    android:padding="0dp"
                    android:text="بالاتر از 90 روز"
                    android:textColor="#fff"
                    android:textSize="17dp" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <CheckBox
                android:id="@+id/award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="right|center_vertical"
                android:text="نمایش جایزه دار ها"
                android:textColor="#fff"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <CheckBox
                android:id="@+id/noStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="right|center_vertical"
                android:text="عدم نمایش بدون موجودی ها"
                android:textColor="#fff"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <CheckBox
                android:id="@+id/limiteds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="right|center_vertical"
                android:text="دارای محدودیت فروش"
                android:textColor="#fff"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <CheckBox
                android:id="@+id/producers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="right|center_vertical"
                android:text="تولید کنندگان"
                android:textColor="#fff"
                android:textSize="18dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_strock_white"
                android:paddingRight="10dp" >

                <LinearLayout
                    android:id="@+id/producersList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>