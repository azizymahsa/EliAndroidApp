<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/hotel_detail_background"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reserv.myapplicationeli.views.activities.hotel.activity.DetailHotelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbarLayout"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarLayout"
            android:fillViewport="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHotelPic"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/test" />
                <android.support.v7.widget.CardView
                    android:id="@+id/cvHotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    android:layout_below="@+id/ivHotelPic"

                    >
                    <LinearLayout
                        android:id="@+id/llHotelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivHotelPic"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            android:text="هتل شرایتون گراند استانبول"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/ivHotelPic"
                                android:layout_marginTop="5dp"
                                android:text="استانبول، ترکیه"
                                android:textColor="#606060"
                                android:textSize="14dp"
                                android:gravity="center|right"
                                />
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="10dp"
                                android:src="@drawable/rating_start"
                                android:layout_gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="@string/icon_location"
                                android:textAppearance="@style/IconFonts"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#606060" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Piyerloti Caddesi, Cephaneci sokak no:14, Fatih, 34126 Istanbul, Turkey"
                                android:textColor="#606060"
                                android:gravity="left"
                                android:layout_marginLeft="5dp"
                                android:textSize="14dp"
                                android:textAppearance="@style/IconFonts"/>

                        </LinearLayout>
                        <com.ogaclejapan.smarttablayout.SmartTabLayout
                            android:layout_below="@+id/cvHotel"
                            android:id="@+id/viewpagertab"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"

                            app:stl_indicatorAlwaysInCenter="false"
                            app:stl_indicatorWithoutPadding="false"
                            app:stl_indicatorInFront="false"
                            app:stl_indicatorInterpolation="linear"
                            app:stl_indicatorGravity="bottom"
                            app:stl_indicatorColor="#40C4FF"
                            app:stl_indicatorThickness="4dp"
                            app:stl_indicatorWidth="auto"
                            app:stl_indicatorCornerRadius="2dp"
                            app:stl_overlineColor="#4D000000"
                            app:stl_overlineThickness="0dp"
                            app:stl_underlineColor="#4D000000"
                            app:stl_underlineThickness="0dp"
                            app:stl_dividerColor="#00ffffff"
                            app:stl_dividerThickness="0dp"
                            app:stl_defaultTabBackground="?attr/selectableItemBackground"
                            app:stl_defaultTabTextAllCaps="false"
                            app:stl_defaultTabTextColor="#FC000000"
                            app:stl_defaultTabTextSize="12sp"
                            app:stl_defaultTabTextHorizontalPadding="10dp"
                            app:stl_defaultTabTextMinWidth="0dp"
                            app:stl_distributeEvenly="true"
                            app:stl_clickable="true"
                            app:stl_titleOffset="55dp"
                            app:stl_drawDecorationAfterTab="false"

                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvViewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="1dp"
                    android:layout_below="@+id/cvHotel"


                    >


                    <android.support.v4.view.ViewPager
                        android:id="@+id/vpPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/tvHotelOptions"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvViewPager"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="16dp"
                    android:text="امکانات هتل"
                    android:textColor="#000000"
                    android:textStyle="bold"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/llHotelOptions"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    android:layout_below="@+id/tvHotelOptions"


                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                     >
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="@string/icon_wifi"
                            android:textAppearance="@style/IconFonts2"
                            android:textSize="18dp"
                            android:background="@drawable/circle_textview"
                            android:gravity="center"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="@string/icon_salon"
                            android:textAppearance="@style/IconFonts2"
                            android:textSize="18dp"
                            android:background="@drawable/circle_textview"
                            android:gravity="center"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="@string/icon_conditioning"
                            android:textAppearance="@style/IconFonts2"
                            android:textSize="18dp"
                            android:background="@drawable/circle_textview"
                            android:gravity="center"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="@string/icon_restaurant"
                            android:textAppearance="@style/IconFonts2"
                            android:textSize="18dp"
                            android:background="@drawable/circle_textview"
                            android:gravity="center"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="@string/icon_tv"
                            android:textAppearance="@style/IconFonts2"
                            android:textSize="18dp"
                            android:background="@drawable/circle_textview"
                            android:gravity="center"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="@string/icon_drink"
                            android:textAppearance="@style/IconFonts2"
                            android:textSize="18dp"
                            android:background="@drawable/circle_textview"
                            android:gravity="center"
                            android:layout_margin="5dp"/>

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+2"
                            android:textSize="14dp"
                            android:background="@drawable/circle_textview_blue"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@android:color/white"/>




                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/tvSelectHotel"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llHotelOptions"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="16dp"
                    android:text="انتخاب هتل"
                    android:textColor="#000000"
                    android:textStyle="bold"/>





                <android.support.v7.widget.CardView
                    android:id="@+id/llSelectHotel"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    android:layout_below="@+id/tvSelectHotel">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="1 X STANDARD ROOM"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:textSize="14dp"
                                android:text="1 X STANDARD ROOM"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:textSize="14dp"
                                android:text="10,450,000 IRR"
                                android:gravity="right"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:textSize="14dp"
                                android:text="1 X STANDARD ROOM"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:textSize="14dp"
                                android:text="10,450,000 IRR"
                                android:gravity="right"/>


                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </RelativeLayout>



        </ScrollView>


    </RelativeLayout>

</RelativeLayout>
