<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/hotel_detail_background"
    tools:context="com.reserv.myapplicationeli.views.activities.hotel.activity.DetailHotelActivity">


    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/shadow" />

    <ScrollView
        android:id="@+id/svDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/hListView2"

                android:layout_width="match_parent"
                android:layout_height="200dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/intro_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.wang.avi.AVLoadingIndicatorView

                    android:id="@+id/avi1"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    app:indicatorColor="@color/app_base_color"
                    app:indicatorName="BallSpinFadeLoaderIndicator"

                    />


            </FrameLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/cvHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hListView2"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"

                >


                <LinearLayout
                    android:id="@+id/llHotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvHotelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivHotelPic"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCityName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/ivHotelPic"
                            android:layout_marginTop="5dp"
                            android:gravity="center|right"
                            android:textColor="#606060"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/ivImage"
                            android:layout_width="60dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rating_start" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/icon_location"
                            android:textAppearance="@style/IconFonts"
                            android:textColor="#606060"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/tvAdress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:textColor="@color/textColorR"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_hotel_detail"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llCommentClick"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:text="نظرات"
                                android:textAppearance="@style/IrsansBold"
                                android:textSize="10dp" />

                            <View
                                android:id="@+id/vComment"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/blue"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llMapClick"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:text="نقشه"
                                android:textAppearance="@style/IrsansBold"
                                android:textSize="10dp" />

                            <View
                                android:id="@+id/vMap"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/blue"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llEmakanatClick"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:text="امکانات"
                                android:textAppearance="@style/IrsansBold"
                                android:textSize="10dp" />

                            <View
                                android:id="@+id/vEmakanat"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/blue"
                                android:visibility="invisible" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llRezervClick"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:text="انتخاب و رزرو اتاق"
                                android:textAppearance="@style/IrsansBold"
                                android:textSize="10dp" />

                            <View
                                android:id="@+id/vRezerv"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/blue" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llLoading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    >

                    <com.wang.avi.AVLoadingIndicatorView

                        android:id="@+id/avi2"
                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        app:indicatorColor="@color/app_base_color"
                        app:indicatorName="BallSpinFadeLoaderIndicator"

                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvViewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvHotel"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="1dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <FrameLayout
                        android:id="@+id/flMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="250dp" />

                    </FrameLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/cvHotel"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="1dp"


                >


                <LinearLayout

                    android:id="@+id/llDynamic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"

                    />
            </android.support.v7.widget.CardView>





                <LinearLayout

                    android:id="@+id/llComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/cvHotel"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"




                   >


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvHotel"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        card_view:cardBackgroundColor="#ffffff"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardElevation="1dp"


                        >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="3 از 5"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/text_color_2e"
                                android:textSize="10dp"
                                android:layout_marginRight="5dp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="100"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:src="@drawable/rating_start"
                                    android:scaleType="fitXY"

                                    />
                            </LinearLayout>




                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="100"
                                android:gravity="right|center"
                                android:padding="5dp"
                                android:text="امتیاز هتل:"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/text_color_2e"
                                android:textSize="14dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="100"
                                android:gravity="right|center"
                                android:padding="5dp"
                                android:text="از مجموع 12 رای ثبت شده"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/text_color_2e"
                                android:textSize="10dp"
                                />


                        </LinearLayout>


                    </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="5dp">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/comment_background"
                            android:gravity="center">
                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/btnSortComment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:elevation="1dp"
                                android:paddingBottom="1dp"
                                fancy:fb_defaultColor="@color/TRANSPARENT"
                                fancy:fb_focusColor="@color/focusColor"
                                fancy:fb_radius="4dp"
                                fancy:fb_text=" "
                                fancy:fb_textColor="#ffff"
                                fancy:fb_textSize="14dp"
                                android:layout_marginLeft="5dp"/>


                            <TextView
                                android:id="@+id/tvSortComment"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="مفیدترین نظرات"
                                android:textAppearance="@style/IrsansBold"
                                android:textColor="@color/text_color_2e"
                                android:textSize="14dp"
                                android:layout_marginRight="5dp"
                                />
                            <TextView
                                android:layout_toRightOf="@+id/tvSortComment"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/icon_sort"
                                android:textAppearance="@style/IconFonts"
                                android:textColor="@color/text_color_2e"
                                android:textSize="@dimen/_20dp"

                                />



                        </RelativeLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="100"
                            android:layout_height="match_parent"
                            android:gravity="right|center"
                            android:padding="5dp"
                            android:text="نظرات کاربران-  15 نظر"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2e"
                            android:textSize="14dp"
                            />

                    </LinearLayout>

                    <com.reserv.myapplicationeli.views.adapters.hotel.rooms.NonScrollListView
                        android:id="@+id/lvComments"
                        android:layout_marginTop="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:divider="@null"
                        android:dividerHeight="0dp"
                       />



                    <TextView
                        android:id="@+id/tvAlertComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="نظری ارسال نشده!"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/text_color_2e"
                        android:textSize="16dp"
                        android:visibility="gone"
                        />

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvHotel"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="5dp"
                        card_view:cardBackgroundColor="#ffffff"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardElevation="1dp"


                        >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/background_hotel_detail"
                        android:layout_margin="5dp">


                        <EditText
                            android:id="@+id/etComment"
                            android:layout_toRightOf="@+id/btnSendComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:minHeight="35dp"
                            android:gravity="center|right"
                            android:paddingRight="5dp"
                            android:textSize="14dp"
                            android:hint="لطفا نظر خود را بنویسید..."
                            android:background="@drawable/transparent"/>


                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/btnSendComment"
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:elevation="1dp"
                            android:paddingBottom="1dp"
                            fancy:fb_defaultColor="@color/toolbar_color"
                            fancy:fb_focusColor="@color/focusColor"
                            fancy:fb_radius="100dp"
                            fancy:fb_text="ارسال"
                            fancy:fb_textColor="#ffff"
                            fancy:fb_textSize="14dp"
                            android:layout_marginLeft="5dp"/>


                    </RelativeLayout>
                    </android.support.v7.widget.CardView>


                </LinearLayout>


            <TextView
                android:id="@+id/tvAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvHotel"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="اتاقی یافت نشد!"
                android:textAppearance="@style/IrsansBold"
                android:textColor="@color/text_color_2e"
                android:textSize="16dp"
                android:visibility="gone" />

            <com.reserv.myapplicationeli.views.adapters.hotel.rooms.NonScrollListView
                android:id="@+id/lvRooms"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cvHotel"
                android:divider="@null"
                android:dividerHeight="0dp" />


        </RelativeLayout>


    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/elNotFound"
        android:layout_below="@+id/toolbarLayout"
        android:visibility="gone"
        >




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:background="@color/hotel_detail_background"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvAlertError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textAppearance="@style/IrsansBold"
                    android:gravity="center"
                    android:textColor="@color/text_color_2e"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/alert"
                    android:layout_centerInParent="true"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/btngravity_big"
                    android:layout_alignParentBottom="true"

                    >
                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnOk"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:elevation="4dp"
                        android:paddingBottom="1dp"
                        fancy:fb_defaultColor="@color/TRANSPARENT"
                        fancy:fb_focusColor="@color/focusColor"
                        fancy:fb_radius="0dp"
                        fancy:fb_text="بازگشت"
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="18dp"
                        />
                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <include
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        />


</RelativeLayout>
