<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/hotel_detail_background"
    android:id="@+id/rlRoot"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reserv.myapplicationeli.views.activities.hotel.activity.DetailHotelActivity">



        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbarLayout"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarLayout"
            android:fillViewport="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/hListView2"

                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                   >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/intro_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvHotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    android:layout_below="@+id/hListView2"

                    >
                    <LinearLayout
                        android:id="@+id/llHotelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/tvHotelName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivHotelPic"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textAppearance="@style/IrsansBold"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/tvCityName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/ivHotelPic"
                                android:layout_marginTop="5dp"
                                android:textColor="#606060"
                                android:textSize="14dp"
                                android:gravity="center|right"
                                />
                            <ImageView
                                android:id="@+id/ivImage"
                                android:layout_width="60dp"
                                android:layout_height="10dp"
                                android:src="@drawable/rating_start"
                                android:layout_gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="@string/icon_location"
                                android:textAppearance="@style/IconFonts"
                                android:gravity="center"
                                android:textSize="25dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#606060" />

                            <TextView
                                android:id="@+id/tvAdress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorR"
                                android:gravity="left"
                                android:layout_marginLeft="5dp"
                                android:textSize="14dp"
                              />

                        </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:orientation="horizontal"
                           android:layout_marginTop="10dp">

                           <LinearLayout
                               android:id="@+id/llMapClick"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="100"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="100"
                                   android:text="نقشه"
                                   android:gravity="center"
                                   android:textSize="12dp"
                                   android:textAppearance="@style/IrsansBold"/>
                               <View
                                   android:id="@+id/vMap"
                                   android:layout_width="match_parent"
                                   android:layout_height="2dp"
                                   android:background="@color/blue"
                                   android:layout_marginLeft="5dp"
                                   android:layout_marginRight="5dp"
                                   android:visibility="invisible"/>
                           </LinearLayout>
                           <LinearLayout
                               android:id="@+id/llEmakanatClick"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="100"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="100"
                                   android:text="امکانات"
                                   android:gravity="center"
                                   android:textSize="12dp"
                                   android:textAppearance="@style/IrsansBold"/>
                               <View
                                   android:id="@+id/vEmakanat"
                                   android:layout_width="match_parent"
                                   android:layout_height="2dp"
                                   android:background="@color/blue"
                                   android:layout_marginLeft="5dp"
                                   android:layout_marginRight="5dp"
                                   android:visibility="invisible"/>
                           </LinearLayout>
                           <LinearLayout
                               android:id="@+id/llRezervClick"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="100"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="100"
                                   android:text="انتخاب و رزرو اتاق"
                                   android:gravity="center"
                                   android:textSize="12dp"
                                   android:textAppearance="@style/IrsansBold"/>
                               <View
                                   android:id="@+id/vRezerv"
                                   android:layout_width="match_parent"
                                   android:layout_height="2dp"
                                   android:background="@color/blue"
                                   android:layout_marginLeft="5dp"
                                   android:layout_marginRight="5dp"
                                   />
                           </LinearLayout>
                       </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvViewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="1dp"
                    android:layout_below="@+id/cvHotel"
                    android:layout_marginBottom="10dp"


                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">



                        <FrameLayout
                            android:id="@+id/flMap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            >

                            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:id="@+id/map"
                                android:layout_width="match_parent"
                                android:layout_height="250dp" />

                        </FrameLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:visibility="gone"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_below="@+id/cvHotel"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="1dp"
                    android:layout_marginBottom="10dp"


                    >


                    <LinearLayout

                    android:id="@+id/llDynamic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"/>
                </android.support.v7.widget.CardView>





                <com.reserv.myapplicationeli.views.ui.NonScrollGridView
                    android:layout_below="@+id/cvHotel"
                    android:numColumns="2"

                    android:id="@+id/gvEmakanat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:visibility="gone"
                    />
                <com.reserv.myapplicationeli.views.adapters.hotel.rooms.NonScrollListView
                    android:layout_below="@+id/cvHotel"

                    android:id="@+id/lvRooms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    />
            </RelativeLayout>


        </ScrollView>

    <include
        layout="@layout/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        />


</RelativeLayout>
