<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/alert_header_background"
        android:text="ارسال نظر"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"

        android:textAppearance="@style/IrsansBold"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/tvAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/IrsansBold"
            android:textSize="14dp"
            android:text="شرایط کنسلی هتل"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/etTitle"
            android:layout_toRightOf="@+id/btnSendComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:minHeight="35dp"
            android:gravity="center|right"
            android:paddingRight="5dp"
            android:textSize="14dp"
            android:hint="لطفا عنوان را وارد نمایید..."
            android:background="@drawable/background_hotel_detail_alert"
            android:maxLines="1"
            android:imeOptions="actionNext"
            />



            <EditText
                android:id="@+id/etName"
                android:layout_toRightOf="@+id/btnSendComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:minHeight="35dp"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:textSize="14dp"
                android:hint="لطفا نام خود را وارد نمایید..."
                android:background="@drawable/background_hotel_detail_alert"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_10dp"
                android:imeOptions="actionDone"

                />


        <com.wang.avi.AVLoadingIndicatorView

            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:indicatorColor="@color/toolbar_color"
            app:indicatorName="BallSpinFadeLoaderIndicator"

            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            />


    </LinearLayout>







    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnOk"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:elevation="4dp"
        android:paddingBottom="1dp"
        fancy:fb_defaultColor="#1234"
        fancy:fb_focusColor="@color/focusColor"
        fancy:fb_radius="100dp"
        fancy:fb_text="تائید"
        fancy:fb_textColor="@color/text_color_4d"
        fancy:fb_textSize="15dp"
        android:layout_marginBottom="@dimen/_10dp_margin"/>








</LinearLayout>