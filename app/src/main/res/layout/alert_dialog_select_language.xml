<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_header_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="انتخاب زبان برنامه"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/white"
        android:textSize="@dimen/_16dp_txtSize"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/ic_language_black_24dp"
        android:text="@string/nowifi"
        android:textColor="@color/text_color_4d"
        android:textSize="@dimen/_25dp_normal_iconSize"
        android:visibility="gone"


        />


    <TextView
        android:id="@+id/tvAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="لطفا زبان برنامه را انتخاب کنید تغییرات بعد از راه اندازی مجدد اعمال میشود"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/text_color_4d"
        android:textSize="@dimen/_12dp_normal_textSize"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50_flight_dp"


        android:background="@android:color/transparent"


        android:gravity="center"

        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/txt_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:paddingBottom="@dimen/_10dp_padding"
            android:paddingTop="@dimen/_10dp_padding"
            android:text="انگلیسی"
            android:textColor="@color/toolbar_color"
            android:textSize="@dimen/_12dp_normal_textSize" />

        <com.eligasht.reservation.views.components.smoothcheckbox.SmoothCheckBox
            android:id="@+id/chB_english"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/_5dp_margin"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            app:color_checked="@color/app_base_color" />

        <TextView
            android:id="@+id/txt_persian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:paddingBottom="@dimen/_10dp_padding"
            android:paddingTop="@dimen/_10dp_padding"
            android:text="فارسی"
            android:textColor="@color/toolbar_color"
            android:textSize="@dimen/_12dp_normal_textSize" />

        <com.eligasht.reservation.views.components.smoothcheckbox.SmoothCheckBox
            android:id="@+id/chB_persian"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:color_checked="@color/app_base_color" />

    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/accept"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10dp_margin"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        fancy:fb_defaultColor="#1234"
        fancy:fb_focusColor="@color/focusColor"
        fancy:fb_radius="100dp"
        fancy:fb_text="باشه"
        fancy:fb_textColor="#4d4d4d"
        fancy:fb_textSize="@dimen/_14dp_txtSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10dp_margin"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnWifi"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:elevation="1dp"
            android:paddingBottom="1dp"
            fancy:fb_defaultColor="#1234"
            fancy:fb_focusColor="@color/focusColor"
            fancy:fb_radius="100dp"
            fancy:fb_text="اینترنت Wifi"
            fancy:fb_textColor="#4d4d4d"
            fancy:fb_textSize="@dimen/_14dp_txtSize" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnMobileData"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:elevation="1dp"
            android:paddingBottom="1dp"
            fancy:fb_defaultColor="#1234"
            fancy:fb_focusColor="@color/focusColor"
            fancy:fb_radius="100dp"
            fancy:fb_text="اینترنت همراه"
            fancy:fb_textColor="#4d4d4d"
            fancy:fb_textSize="@dimen/_14dp_txtSize" />

    </LinearLayout>


</LinearLayout>