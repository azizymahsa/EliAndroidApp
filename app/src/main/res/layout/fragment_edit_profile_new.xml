<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/_10_flight_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_10dp"
                    android:gravity="center"
                    android:text="@string/basic_information"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="#000"
                    android:textSize="@dimen/_title_password" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/passwordWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_name_fa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_name"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/name"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_last_name_fa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_family_name"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/family_name"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="@dimen/_10_flight_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_10dp"
                    android:gravity="center"
                    android:text="@string/other_information"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="#000"
                    android:textSize="@dimen/_title_password" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_email_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_email_address"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/mail"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_name_En"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_name_english"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/name_en"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_last_name_En"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_family_name_english"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/family_name"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_code_meli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_national_code"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/national_code"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/edt_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:minHeight="@dimen/_40dp_password"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight=".2"
                            android:clickable="false"
                            android:editable="false"
                            android:enabled="false">


                            <EditText
                                android:id="@+id/txt_birthday"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:editable="false"
                                android:enabled="false"
                                android:gravity="right|center_vertical"
                                android:hint="@string/please_enter_your_birth_date"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/text_color_4d"
                                android:textSize="@dimen/_15dp_normal_textSize" />


                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/rlBirthday"
                            android:orientation="horizontal"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/TRANSPARENT" />

                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/birth_date"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:minHeight="@dimen/_40dp_password"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_home_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_phone_number"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/phone"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:minHeight="@dimen/_40dp_password"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_mobile_number"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/mobile"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2">


                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right|center_vertical"
                            android:hint="@string/please_enter_your_address"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_15dp_normal_textSize" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/address"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp_password"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight=".2"
                        android:background="@android:color/transparent"


                        android:gravity="center"

                        android:orientation="horizontal"


                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:paddingBottom="@dimen/_10dp_padding"
                            android:paddingTop="@dimen/_10dp_padding"
                            android:text="@string/female"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <RadioButton
                            android:id="@+id/chB_woman"
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="@dimen/_5dp_margin"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:paddingBottom="@dimen/_10dp_padding"
                            android:paddingTop="@dimen/_10dp_padding"
                            android:text="@string/male"
                            android:textColor="@color/text_color_4d"
                            android:textSize="@dimen/_12dp_normal_textSize" />

                        <RadioButton
                            android:id="@+id/chB_man"
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="center|right"
                        android:paddingTop="@dimen/_10dp_padding"
                        android:text="@string/sex"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/_12dp_normal_textSize" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_40dp"
                    android:background="#737373" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>