<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLayout"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            card_view:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tvArrow"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="@string/icon_arrow_down"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="@color/text_color_4d"
          />
                <Spinner
                    android:id="@+id/languageSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:text="زبان"
                    android:textColor="@color/text_color_4d"
                    android:textAppearance="@style/IrsansBold"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            card_view:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="@string/icon_arrow_down"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="@color/text_color_4d"
                    />
                <Spinner
                    android:id="@+id/curencySpinner"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:text="واحد"
                    android:textColor="@color/text_color_4d"
                    android:textAppearance="@style/IrsansBold"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="@string/icon_arrow_down"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="@color/text_color_4d"
                    />
                <Spinner
                    android:id="@+id/officeSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:text="آفیس"
                    android:textColor="@color/text_color_4d"
                    android:textAppearance="@style/IrsansBold"/>




            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



















    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/shadow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10dp_margin"
        android:layout_marginRight="@dimen/_10dp_margin"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tvConfirm"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
