<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLayout"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            card_view:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tvArrow"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="@string/icon_arrow_down"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="@color/text_color_4d"
          />
                <Spinner
                    android:id="@+id/languageSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:text="زبان"
                    android:textColor="@color/text_color_4d"
                    android:textAppearance="@style/IrsansBold"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            card_view:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="@string/icon_arrow_down"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="@color/text_color_4d"
                    />
                <Spinner
                    android:id="@+id/curencySpinner"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:text="واحد"
                    android:textColor="@color/text_color_4d"
                    android:textAppearance="@style/IrsansBold"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_10dp_margin"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="@string/icon_arrow_down"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="@color/text_color_4d"
                    />
                <Spinner
                    android:id="@+id/officeSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:text="آفیس"
                    android:textColor="@color/text_color_4d"
                    android:textAppearance="@style/IrsansBold"/>




            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



















    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/dialog_opener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp_margin"
                android:clickable="true"


                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10_flight_dp"
                    android:layout_marginRight="@dimen/_10_flight_dp"
                    android:src="@drawable/ic_language_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/language"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:gravity="center"
                        android:text="@string/text1"
                        android:textColor="#000"
                        android:textSize="@dimen/title_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:layout_marginTop="@dimen/margin_top"
                        android:gravity="center"
                        android:text="@string/text2"
                        android:textColor="#969292"
                        android:textSize="@dimen/detail_setting" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#bab6b6" />

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"


                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10_flight_dp"
                    android:layout_marginRight="@dimen/_10_flight_dp"
                    android:src="@drawable/ic_attach_money_black_24dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:gravity="center"
                        android:text="@string/text3"
                        android:textColor="#000"
                        android:textSize="@dimen/title_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:layout_marginTop="@dimen/margin_top"
                        android:gravity="center"
                        android:text="@string/text4"
                        android:textColor="#969292"
                        android:textSize="@dimen/detail_setting" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#bab6b6" />

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"


                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10_flight_dp"
                    android:layout_marginRight="@dimen/_10_flight_dp"
                    android:src="@drawable/ic_home_black_24dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:gravity="center"
                        android:text="@string/text5"
                        android:textColor="#000"
                        android:textSize="@dimen/title_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:layout_marginTop="@dimen/margin_top"
                        android:gravity="center"
                        android:text="@string/text6"
                        android:textColor="#969292"
                        android:textSize="@dimen/detail_setting" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#bab6b6" />

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>








    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/shadow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10dp_margin"
        android:layout_marginRight="@dimen/_10dp_margin"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/searchPlan"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
