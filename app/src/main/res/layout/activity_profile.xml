<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_light">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_margin="10dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:src="@drawable/user_sidemenu"
               android:background="@color/gray_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="علی فرهادی"
                android:textColor="@color/dark_blue"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.7"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginBottom="@dimen/_10dp"
       android:elevation="3dp">

       <LinearLayout
           android:id="@+id/EditProfile"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tvArrow"
                   android:layout_width="0dp"
                   android:layout_weight="0.1"
                   android:layout_height="match_parent"
                   android:layout_alignParentLeft="true"
                   android:layout_marginRight="10dp"
                   android:gravity="center"
                   android:text="@string/icon_arrow_up"
                   android:textAppearance="@style/IconFonts"
                   android:textColor="@color/dark_blue"
                   android:textSize="18dp"
                   android:layout_marginLeft="10dp"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:text="ویرایش پروفایل"
                   android:gravity="center|right"
                   android:padding="@dimen/_5dp_padding"
                   android:textColor="@color/dark_blue"
                   android:textSize="12dp"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="0.2"
                   android:layout_height="match_parent"
                   android:textAppearance="@style/User_pass_login"
                   android:text="@string/icon_user_login"
                   android:gravity="center|left"
                   android:textSize="@dimen/_24dp_textSize"
                   android:paddingLeft="8dp"
                   android:textColor="@color/light_blue"

                   />

           </LinearLayout>

           <com.github.aakira.expandablelayout.ExpandableWeightLayout
               android:id="@+id/expandableLayout"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="3"
               app:ael_duration="1000"
               app:ael_interpolator="anticipateOvershoot">

               <!--<ImageView-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="wrap_content"-->
                   <!--android:layout_centerInParent="true"-->
                   <!--android:src="@drawable/sample" />-->
           </com.github.aakira.expandablelayout.ExpandableWeightLayout>


       </LinearLayout>


   </android.support.v7.widget.CardView>


</LinearLayout>