<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout

        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp_hight">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp_hight"
            android:background="@color/toolbar_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_14dp"
                android:gravity="center"
                android:orientation="vertical">





                    <TextView
                        android:id="@+id/txticon"
                        android:layout_width="@dimen/_100dp_normal"
                        android:layout_height="@dimen/_50_flight_dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.12"
                        android:gravity="center"
                        android:background="@drawable/eligasht_en"
                        android:textAppearance="@style/IconMenu"
                        android:textColor="@color/white"
                        android:visibility="visible"

                        />




                <TextView
                    android:id="@+id/txtCityBargasht"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCityRaft"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="tvCount"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/toolbar_desc_12dp"
                    android:visibility="gone" />

            </LinearLayout>


        </RelativeLayout>


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/txtBack"
            android:layout_width="@dimen/toolbar_bottom_width_50dp"
            android:layout_height="@dimen/toolbar_bottom_width_50dp"
            android:layout_gravity="right|center"
            android:gravity="right"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="@color/focusColor"

            fancy:fb_radius="200dp"
            fancy:fb_text=" "
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="@dimen/_25dp_normal_iconSize" />


    </FrameLayout>

<!--    <LinearLayout
        android:id="@+id/lnrList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"

        android:orientation="vertical">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlList"
            android:layout_width="match_parent"
            android:background="@color/gray_light"
            android:layout_height="0dp"
            android:layout_weight="89">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFacility"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            />
        </RelativeLayout>
        <!-- //////////////////////START LIST VIEW/////////////////////////////// -->
        <!--bottom-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@drawable/shadow3" />

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp_margin_package"

            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"

            >-->
        <LinearLayout
            android:id="@+id/llFilter"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"


            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="dd" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="dd" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="dd" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="profile" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/shadow" />

    <include
        layout="@layout/loading_layout_parvaz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>