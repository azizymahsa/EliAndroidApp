<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:visibility="invisible"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TRANSPARENT"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/alert_header_background">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"

                />
        </LinearLayout>


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"

            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_20dp_normal_textSize"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_color_4d"

                android:textSize="@dimen/_14dp_txtSize" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp_margin"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnCancel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="1dp"
                android:paddingBottom="1dp"
                fancy:fb_defaultColor="#1234"
                fancy:fb_focusColor="@color/focusColor"
                fancy:fb_radius="100dp"
                fancy:fb_text="مکان یاب"
                fancy:fb_textColor="#4d4d4d"
                fancy:fb_textSize="@dimen/_14dp_txtSize" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnOk"


                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="1dp"
                android:paddingBottom="1dp"
                fancy:fb_defaultColor="#1234"
                fancy:fb_focusColor="@color/focusColor"
                fancy:fb_radius="100dp"
                fancy:fb_text="بازگشت"
                fancy:fb_textColor="#4d4d4d"
                fancy:fb_textSize="@dimen/_14dp_txtSize" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>










