<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="شماره قرارداد"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="تاریخ"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_path"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="مسیر"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_depart_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="تاریخ شروع سفر"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_login_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="تاریخ ورود"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_total_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="مبلغ نهایی"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_remained"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_12dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="مانده"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/contract_follower"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="پیگیر"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/visa"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="وضبعت ویزا"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/ticket"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="وضبعت بلیط"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/hotel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="وضبعت هتل"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5dp_margin">

                <TextView
                    android:id="@+id/documents"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="وضبعت مدارک"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_5dp_margin"
                android:layout_marginTop="@dimen/_5dp_margin"
                android:layout_marginRight="@dimen/_5dp_margin"
                android:layout_marginBottom="@dimen/_15dp_margin">

                <TextView
                    android:id="@+id/contract_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:text="ایمیل"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginRight="5dp"
         />



            </LinearLayout>

            <Button
                android:id="@+id/btnSaveInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/btngravity_big"
                android:text="ارسال مدارک"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_16dp_normal_textSize"
                android:textStyle="bold"

                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>