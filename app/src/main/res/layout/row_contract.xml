<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/path_dim"
                android:layout_margin="@dimen/_5dp_margin"
                android:background="@drawable/path2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:gravity="right|center"
                    android:text="شماره قرار داد"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_date"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="تاریخ"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_path"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"

                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="مسیر"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_depart_date"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="تاریخ شروع سفر"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_login_date"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="تاریخ ورود"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_remained"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="مانده"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_follower"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="کارشناس فروش"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/visa"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="وضعیت ویزا"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ticket"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="وضعیت بلیط"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotel"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="وضعیت هتل"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/documents"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="وضعیت مدارک"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp_margin"

                android:layout_marginRight="@dimen/_20dp"

                android:layout_marginTop="@dimen/_10dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_email"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.6"
                    android:gravity="center|right"
                    android:text="ایمیل"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_12dp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#fafafa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp_margin"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_total_price"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="@dimen/_15dp_normal_textSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.3"
                    android:gravity="center|right"
                    android:text="مبلغ نهایی"

                    android:textColor="@color/green"
                    android:textSize="@dimen/_15dp_normal_textSize" />


            </LinearLayout>

            <Button
                android:id="@+id/btnSaveInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/btngravity_big"
                android:text="ارسال مدارک"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15dp_normal_textSize"
                android:textStyle="bold"

                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>