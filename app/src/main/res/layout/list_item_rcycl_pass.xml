<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/hotel_detail_background"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff4ee"
                android:minHeight="@dimen/_35dp"
                >


                <TextView
                    android:id="@+id/tvTitleRcycl"
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/detail_hotel"
                    android:textAppearance="@style/IrsansBold"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/_12dp_normal_textSize" />

                <TextView
                    android:id="@+id/tvArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center|left"
                    android:text="@string/icon_arrow_up"
                    android:textAppearance="@style/IconFonts"
                    android:textColor="@color/text_color_2e"
                    android:textSize="25dp" />

            </RelativeLayout>



            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonLayout"
                android:orientation="vertical"
                app:ael_duration="400"
                app:ael_expanded="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!--نام-->
                  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                     >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_height_70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="20dp"
                            android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="257dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1.43"
                                android:gravity="right"
                                android:text="*"
                                android:textColor="#ff0000" />

                            <TextView
                                android:id="@+id/lblnamem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:text="@string/name"
                                android:textColor="#808080"
                                android:textSize="@dimen/_15dp_normal_textSize" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/txtnamem"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.62"
                            android:background="@drawable/background_strock_white"
                            android:gravity="center|center_vertical"
                            android:hint="@string/please_eng"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="20"
                            android:nextFocusDown="@+id/txtfamilym"
                            android:paddingTop="0dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#4d4d4d"
                            android:textColorHint="#aaaaaa"
                            android:textSize="@dimen/_14dp" />
                        </LinearLayout>
                    </LinearLayout>
                  <!--  نام خانوادگی-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toolbar_height_70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"

                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="257dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1.43"
                                android:gravity="right"
                                android:text="*"
                                android:textColor="#ff0000" />

                            <TextView
                                android:id="@+id/lblfamilym"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:text="@string/name_family"
                                android:textColor="#808080"
                                android:textSize="@dimen/_15dp_normal_textSize" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/txtfamilym"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.62"
                            android:background="@drawable/background_strock_white"
                            android:gravity="center|center_vertical"
                            android:hint="@string/please_eng"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="20"
                            android:nextFocusDown="@+id/txtfamilym"
                            android:paddingTop="0dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#4d4d4d"
                            android:textColorHint="#aaaaaa"
                            android:textSize="@dimen/_14dp" />
                    </LinearLayout>
                </LinearLayout>
                <!--شماره پاسپورت-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/linear_number_passport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toolbar_height_70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"

                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="257dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1.43"
                                android:gravity="right"
                                android:text="*"
                                android:textColor="#ff0000" />

                            <TextView
                                android:id="@+id/lblnumber_passport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:text="@string/number_pass"
                                android:textColor="#808080"
                                android:textSize="@dimen/_15dp_normal_textSize" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/txtnumber_passport"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"

                            android:layout_marginRight="5dp"
                            android:layout_weight="0.62"
                            android:background="@drawable/background_strock_white"
                            android:gravity="center|center_vertical"
                            android:inputType="text"
                            android:paddingTop="0dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#4d4d4d"
                            android:textSize="@dimen/_14dp" />
                    </LinearLayout>
                </LinearLayout>
                    <!--کدملی-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/linear_code_meli"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_height_70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="257dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right|center"
                                    android:layout_weight="1.43"
                                    android:gravity="right|center_vertical"
                                    android:paddingTop="3dp"
                                    android:text="*"
                                    android:textColor="#ff0000" />

                                <TextView
                                    android:id="@+id/lbl_NationalCode_m"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="4dp"
                                    android:text="@string/meli_code"
                                    android:textColor="#808080"
                                    android:textSize="@dimen/_15dp_normal_textSize" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/txt_NationalCode_m"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.62"
                                android:background="@drawable/background_strock_white"
                                android:gravity="center|center_vertical"
                                android:inputType="number"

                                android:paddingTop="0dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#4d4d4d"
                                android:textSize="@dimen/_14dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--تاریخ تولد-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_height_70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="257dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight="1.43"
                                    android:gravity="right"
                                    android:text="*"
                                    android:textColor="#ff0000" />

                                <TextView
                                    android:id="@+id/lbltavalodm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="4dp"
                                    android:text="@string/date_birth"
                                    android:textColor="#808080"
                                    android:textSize="@dimen/_15dp_normal_textSize" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txttavalodm"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"

                                android:layout_marginRight="5dp"
                                android:layout_weight="0.62"
                                android:background="@drawable/background_strock_white"
                                android:gravity="center|center_vertical"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textSize="@dimen/_14dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--انقضا پاسپورت-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_height_70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="257dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight="1.43"
                                    android:gravity="right"
                                    android:text="*"
                                    android:textColor="#ff0000" />

                                <TextView
                                    android:id="@+id/lblexp_passport"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="4dp"
                                    android:text="@string/exp_pas"
                                    android:textColor="#808080"
                                    android:textSize="@dimen/_15dp_normal_textSize" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtexp_passport"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"

                                android:layout_marginRight="5dp"
                                android:layout_weight="0.62"
                                android:background="@drawable/background_strock_white"
                                android:gravity="center|center_vertical"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textSize="@dimen/_14dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--اطلاعات بیشتر-->
                    <TextView
                        android:id="@+id/txtMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="24dp"
                        android:text="@string/more_data"
                        android:textColor="#000099"
                        android:textSize="@dimen/_15dp_normal_textSize"
                        android:textStyle="bold" />
                    <!--ملیت-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/linearMeliyat"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_height_70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="257dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight="1.43"
                                    android:gravity="right"
                                    android:text="*"
                                    android:textColor="#ff0000" />

                                <TextView
                                    android:id="@+id/lblmeliyatm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="4dp"
                                    android:text="@string/nationality"
                                    android:textColor="#808080"
                                    android:textSize="@dimen/_15dp_normal_textSize" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtmeliyatm"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"

                                android:layout_marginRight="5dp"
                                android:layout_weight="0.62"
                                android:background="@drawable/background_strock_white"
                                android:gravity="center|center_vertical"
                                android:paddingRight="10dp"
                                android:text="IR"
                                android:textSize="@dimen/_14dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--محل اقامت-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/linearMahaleeghamat"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_height_70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="257dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight="1.43"
                                    android:gravity="right"
                                    android:text="*"
                                    android:textColor="#ff0000" />

                                <TextView
                                    android:id="@+id/lblmahale_eghamat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="4dp"
                                    android:text="@string/eghamat_local"
                                    android:textColor="#808080"
                                    android:textSize="@dimen/_15dp_normal_textSize" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtmahale_eghamat"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"

                                android:layout_marginRight="5dp"
                                android:layout_weight="0.62"
                                android:background="@drawable/background_strock_white"
                                android:gravity="center|center_vertical"
                                android:paddingRight="10dp"
                                android:text="IR"
                                android:textSize="@dimen/_14dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>



