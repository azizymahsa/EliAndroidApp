<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_passenger_prefactor"

    android:id="@+id/rlRoot">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />
    <ScrollView
        android:id="@+id/svRating"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbarLayout"
        android:background="@color/white"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:gravity="center|top"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="امکانات هتل"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"

                    app:bsb_track_color="@color/color_passenger_prefactor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="دسترسی به نقاط مهم"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@color/color_passenger_prefactor" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="کیفیت خواب"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@color/color_passenger_prefactor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="ارزش در برابر قیمت"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID4"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@color/color_passenger_prefactor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="وضعیت خدمات"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@color/color_passenger_prefactor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="وضعیت نظافت"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID6"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@color/color_passenger_prefactor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="خوشرویی کارکنان"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID7"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@color/color_passenger_prefactor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="کیفیت غذا و پذیرایی"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize"
                    android:layout_marginTop="@dimen/_10dp_margin_comment"/>

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/ScoreParameterID8"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp_margin_comment"

                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_max="10"
                    app:bsb_min="0"
                    app:bsb_progress="5"
                    app:bsb_rtl="true"
                    app:bsb_section_count="10"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_seek_by_section="true"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@color/color_passenger_prefactor" />




            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginBottom="@dimen/_5dp_margin"
                android:layout_marginTop="@dimen/_5dp_margin"
                android:background="@drawable/btngravity_big"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"

                >
                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnToComment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    fancy:fb_defaultColor="@color/TRANSPARENT"
                    fancy:fb_focusColor="@color/focusColor"
                    fancy:fb_textColor="#ffff"
                    fancy:fb_textSize="@dimen/_14dp_txtSize"
                    fancy:fb_text="مرحله بعد"

                    />




            </RelativeLayout>
        </LinearLayout>



    </ScrollView>





    <LinearLayout
        android:id="@+id/llComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"
        android:layout_marginLeft="@dimen/_10dp_margin"
        android:layout_marginRight="@dimen/_10dp_margin"
        android:orientation="vertical"
        android:visibility="gone"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="350"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:background="@drawable/background_strock_white_comment"
                android:gravity="center|center_vertical"
                android:hint="نام و نام خانوادگی"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#c2c2c2"
                android:textSize="@dimen/_12dp_normal_textSize" />

            <EditText
                android:id="@+id/etMail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:background="@drawable/background_strock_white_comment"
                android:gravity="center|center_vertical"
                android:hint="ایمیل"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#c2c2c2"
                android:textSize="@dimen/_12dp_normal_textSize"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/etTitle"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:background="@drawable/background_strock_white_comment"
                android:gravity="center|center_vertical"
                android:hint="عنوان پیام"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#c2c2c2"
                android:textSize="@dimen/_12dp_normal_textSize" />

            <EditText
                android:id="@+id/etMessage"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_210dp_height_comment"
                android:layout_marginTop="@dimen/_10dp_margin"
                android:background="@drawable/background_strock_white_comment"
                android:gravity="center|top"
                android:hint="نظر شما"
                android:imeOptions="normal"
                android:paddingTop="3dp"
                android:textColor="#000000"
                android:textColorHint="#c2c2c2"
                android:textSize="@dimen/_12dp_normal_textSize" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:gravity="right|center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="مایل به نمایش نام نیستم"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/cbSubmitName"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="3dp"
                    app:color_checked="@color/app_base_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:gravity="right|center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="این هتل را برای دیگران پیشنهاد میکنم"
                    android:textColor="@color/text_color_4d"
                    android:textSize="@dimen/_14dp_txtSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/cbIsRecommended"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="3dp"
                    app:color_checked="@color/app_base_color" />

            </LinearLayout>
        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_5dp_margin"
            android:layout_marginTop="@dimen/_5dp_margin"
            android:background="@drawable/btngravity_big"

            >
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"


                fancy:fb_defaultColor="@color/TRANSPARENT"
                fancy:fb_focusColor="@color/focusColor"
                fancy:fb_textColor="#ffff"
                fancy:fb_textSize="@dimen/_14dp_txtSize"
                fancy:fb_text="ثبت نظر"

                />




        </RelativeLayout>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/shadow" />
    <RelativeLayout
        android:id="@+id/rlLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ad000000"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="@dimen/toolbar_height_70dp"
            android:layout_height="@dimen/toolbar_height_70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10dp_margin"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="circle-l.json"

            />

    </RelativeLayout>


</RelativeLayout>
