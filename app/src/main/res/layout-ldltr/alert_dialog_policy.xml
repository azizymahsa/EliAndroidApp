<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_header_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:text="@string/alert"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/white"
        android:textSize="@dimen/_16dp_txtSize"


        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_12dp_normal_textSize" />

        <TextView
            android:id="@+id/tvAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_14dp_txtSize" />

        <com.wang.avi.AVLoadingIndicatorView

            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"

            app:indicatorColor="@color/toolbar_color"
            app:indicatorName="BallSpinFadeLoaderIndicator" />


    </LinearLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnOk"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10dp_margin"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        fancy:fb_defaultColor="#1234"
        fancy:fb_focusColor="@color/focusColor"
        fancy:fb_radius="100dp"
        fancy:fb_text="@string/IrOK"
        fancy:fb_textColor="#4d4d4d"
        fancy:fb_textSize="@dimen/_14dp_txtSize" />


</LinearLayout>