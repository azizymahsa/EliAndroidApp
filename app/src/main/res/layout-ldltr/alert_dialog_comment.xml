<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/n_blue_btn"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/alert"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/white"

        android:textSize="@dimen/_16dp_normal_textSize"

        />

    <TextView
        android:id="@+id/tvAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/text_color_4d"
        android:textSize="@dimen/_12dp_normal_textSize" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnOk"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_40dp"
        android:layout_marginBottom="@dimen/_10dp_margin"
        android:elevation="4dp"
        android:paddingBottom="1dp"
        fancy:fb_defaultColor="#1234"
        fancy:fb_focusColor="@color/focusColor"
        fancy:fb_radius="100dp"
        fancy:fb_text="@string/IrOK"
        fancy:fb_textColor="@color/text_color_4d"
        fancy:fb_textSize="@dimen/_14dp_txtSize" />


</LinearLayout>