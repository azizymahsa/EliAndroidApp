<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_strok_item_package"
            android:orientation="vertical"
            android:padding="10sp"

            >

            <TextView
                android:id="@+id/txt_hr_room_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:gravity="center"
                android:text="اتاق استاندارد با تخت یکنفره"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12dp_normal_textSize" />

            <TextView
                android:id="@+id/txt_hr_room_list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="@dimen/_12dp_normal_textSize" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_strock_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/layout_info_person_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_adault"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:padding="5sp"
                        android:text="@string/package_a"
                        android:textSize="@dimen/_12dp_normal_textSize" />
                    <TextView
                        android:id="@+id/price_adault"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:textSize="@dimen/_12dp_normal_textSize" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_w_child"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:padding="6sp"
                        android:text="@string/package_b"
                        android:textSize="@dimen/_12dp_normal_textSize" />
                    <TextView
                        android:id="@+id/price_w_child"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:textSize="@dimen/_12dp_normal_textSize" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_n_child"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:padding="6sp"
                        android:text="@string/package_c"
                        android:textSize="@dimen/_12dp_normal_textSize" />
                    <TextView
                        android:id="@+id/price_n_child"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:textSize="@dimen/_12dp_normal_textSize" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_infant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="left"
                        android:padding="6sp"
                        android:text="@string/package_d"
                        android:textSize="@dimen/_12dp_normal_textSize" />
                    <TextView
                        android:id="@+id/price_infant"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/_12dp_normal_textSize"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingTop="15sp">

                <com.eligasht.reservation.views.components.smoothcheckbox.SmoothCheckBox
                    android:id="@+id/chk_prow_price"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12sp"
                    android:gravity="center"
                    app:color_checked="@color/green"
                    app:color_unchecked_stroke="#818181" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="31,850000"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="#000"
                        android:textSize="@dimen/_13dp_normal_textSize" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:gravity="center"
                        android:text="@string/curency"
                        android:textAppearance="@style/IrsansBold"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_13dp_normal_textSize" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
