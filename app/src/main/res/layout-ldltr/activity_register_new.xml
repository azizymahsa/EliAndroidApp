<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--//header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login_page_picture" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/register"
            android:textAppearance="@style/IrsansBold"
            android:textColor="#fff" />

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" />
    </RelativeLayout>

    <!--bottom-->
    <LinearLayout
        android:id="@+id/lnrReg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.42"
        android:orientation="vertical"
        android:visibility="visible">
        <!--mobile-->
        <LinearLayout
            android:id="@+id/lnrMobile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center|right|bottom"
                android:paddingBottom="13dp"
                android:paddingRight="8dp"
                android:text="@string/icon_user_login"
                android:textAppearance="@style/User_pass_login"
                android:textColor="@color/text_color_2e"
                android:textSize="@dimen/_25dp_normal_iconSize" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="left|center|bottom"
                android:hint="@string/_phone_number"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_2e"
                android:textColorHint="@color/text_color_2e"
                android:textSize="@dimen/_14dp_txtSize" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/text_color_2e" />
        <!--password-->
        <LinearLayout
            android:id="@+id/lnrPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center|right|bottom"
                android:paddingBottom="13dp"
                android:paddingRight="8dp"
                android:text="@string/icon_pass_login"
                android:textAppearance="@style/User_pass_login"
                android:textColor="@color/text_color_2e"
                android:textSize="@dimen/_25dp_normal_iconSize" />

            <EditText
                android:id="@+id/edit_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="left|center|bottom"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_2e"
                android:textColorHint="@color/text_color_2e"
                android:textSize="@dimen/_14dp_txtSize" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/text_color_2e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center|bottom|right"
                android:paddingBottom="13dp"
                android:paddingRight="8dp"
                android:text="@string/icon_pass_login"
                android:textAppearance="@style/User_pass_login"
                android:textColor="@color/text_color_2e"

                android:textSize="@dimen/_25dp_normal_iconSize" />

            <EditText
                android:id="@+id/edit_confirm_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="left|center|bottom"
                android:hint="@string/re_enter_your_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="@color/text_color_2e"
                android:textColorHint="@color/text_color_2e"
                android:textSize="@dimen/_14dp_txtSize" />



        </LinearLayout>
        <!--حریم خصوصی-->
        <LinearLayout
            android:id="@+id/lnrPrivacy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.60"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginRight="@dimen/_40dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_25dp">

            <CheckBox
                android:id="@+id/txtCheck"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center|right|bottom"
                android:maxLines="3"
                android:paddingRight="8dp"

                android:paddingBottom="13dp"
                android:textAppearance="@style/User_pass_login"
                android:textColor="@color/text_color_2e"
                android:textColorHint="@color/text_color_2e"
                android:textSize="@dimen/_14dp_txtSize" />

           <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/_150"
                android:background="@null"
                android:gravity="left|center|bottom"
                android:text="@string/_privacy_condition"
                android:imeOptions="actionDone"
                android:paddingBottom="1dp"
                android:maxLines="3"
                android:textColor="@color/text_color_2e"
                android:textColorHint="@color/text_color_2e"
                android:textSize="@dimen/_14dp_txtSize" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/text_color_2e"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layout_reset_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.3"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="right|center"
                android:text="فراموشی کلمه عبور"
                android:textColor="@color/text_color_2e"
                android:textSize="@dimen/_14dp_txtSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/icon_forget_login"
                android:textAppearance="@style/User_pass_login"
                android:textColor="@color/text_color_2e"
                android:textSize="@dimen/_25dp_normal_iconSize" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="45dp"
            android:layout_weight="0.4"
            android:gravity="right"
            android:orientation="vertical"

            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:gravity="right"
                android:text="ثبت نام"
                android:textAppearance="@style/IrsansBold"
                android:textColor="@color/text_color_2e"
                android:textSize="@dimen/_14dp_txtSize" />

        </LinearLayout>


    </LinearLayout>

    <!--activation-->
    <LinearLayout
        android:id="@+id/lnractivation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.42"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50_flight_dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtMobileNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09366053684 "
                android:textColor="#f4ad51"/>
            <TextView
                android:layout_marginRight="@dimen/_7_flight_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_your_number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEditMb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/_edit_mobile"
                android:layout_marginBottom="@dimen/_25dp_normal_iconSize"
                android:linksClickable="true"
                android:textColor="@color/text_color_2e"/>

            <EditText
                android:id="@+id/edtActCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:gravity="center|center_vertical"
                android:hint="@string/_activation_code"
                android:maxLength="20"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#000000"
                android:textColorHint="#aaaaaa"
                android:textSize="@dimen/_14dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/text_color_2e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50_flight_dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"

            android:layout_marginRight="40dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:20 "
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000000"/>

            <RelativeLayout
                android:id="@+id/rlBtnAct"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:background="@drawable/background_strock_orange"
                android:gravity="right">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnReturnAct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    fancy:fb_defaultColor="@android:color/transparent"
                    fancy:fb_focusColor="#96000000"
                    fancy:fb_radius="0dp"

                    fancy:fb_text="@string/_resend_activ_code"
                    fancy:fb_textColor="#f4ad51"
                    fancy:fb_textSize="@dimen/_16dp_normal_textSize"
                    />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="@drawable/btngravity_big"
        android:gravity="right">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="#96000000"
            fancy:fb_radius="0dp"
            fancy:fb_text="@string/_send_activation_code"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="@dimen/_16dp_normal_textSize" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlTakmil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="@drawable/btngravity_big"
        android:gravity="right">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnTakmil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="#96000000"
            fancy:fb_radius="0dp"
            fancy:fb_text="@string/_complete_registration"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="@dimen/_16dp_normal_textSize" />


    </RelativeLayout>


</LinearLayout>