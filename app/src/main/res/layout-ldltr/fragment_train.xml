<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--header-->
    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/header_shadow"
        android:minHeight="@dimen/_50dp_normal"
        android:layout_alignParentTop="true">


    </RelativeLayout>
    <!--center-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_14dp_txtSize"
        android:layout_below="@+id/toolbarLayout">
        <!--    " رفت و برگشت"-->
        <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginLeft="@dimen/_40dp_password"
            android:layout_marginRight="@dimen/_40dp_password"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btntwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_strock_gray_curv_narrow"
                android:gravity="center"
                android:text=" رفت و برگشت"
                android:textColor="@color/grayBB"
                android:layout_marginRight="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_5_flight_dp"
                android:textSize="@dimen/_12dp_normal_textSize"

                />
            <TextView
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_strock_blue_light"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_5_flight_dp"
                android:text="فقط رفت"
                android:textColor="@color/white"
                android:textSize="@dimen/_12dp_normal_textSize"

                />
        </LinearLayout>
        <!--mabda maghsad-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearLayout_mabda"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:layout_gravity="right"


                android:layout_marginTop="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblProductID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="right"
                    android:text="@string/origin"
                    android:textColor="@color/train_gray"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/select_origin_city_or_airport"
                    android:textColor="@color/train_gray"
                    android:textSize="@dimen/_15dp_normal_textSize"
                    android:textStyle="bold"
                    tools:ignore="SpUsage" />
                <View android:background="@color/gray_light"
                    android:layout_width = "match_parent"
                    android:layout_marginTop="@dimen/_14dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/lbl_forudgah_mabda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="  "
                    android:textColor="#fff"
                    android:textSize="@dimen/_12dp_normal_textSize"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_maghsad"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_14dp_txtSize"
                android:layout_weight="50"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="right"
                    android:text="@string/destination_colon"
                    android:textColor="#000"
                    android:textSize="@dimen/_15dp_normal_textSize"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvMaghsad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/_destination_city"
                    android:textColor="@color/train_gray"
                    android:textSize="@dimen/_15dp_normal_textSize"
                    android:textStyle="bold" />
                <View android:background="@color/gray_light"
                    android:layout_width = "match_parent"
                    android:layout_marginTop="@dimen/_14dp"

                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/lbl_forudgah_maghsad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=" "
                    android:textColor="#fff"
                    android:textSize="@dimen/_12dp_normal_textSize" />
            </LinearLayout>

        </LinearLayout>
        <!--date picker-->
        <LinearLayout
            android:id="@+id/linear_tarikh_az_picker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:layout_marginTop="@dimen/_12dp_normal_textSize"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/linear_picker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:layout_marginTop="@dimen/_7_flight_dp"
                    android:background="@color/hotel_detail_background"
                    card_view:cardCornerRadius="@dimen/_10_flight_dp"
                    card_view:cardBackgroundColor="#ffffff">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:background="#fff"
                            android:gravity="right|center"
                            android:text="@string/return_date"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/tarikh_be_picker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15_flight_dp"

                                android:gravity="center|right"
                                android:text="@string/please_select_one"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_12dp_normal_textSize"/>
                            <TextView
                                android:id="@+id/tarikh_be_picker_day"
                                android:layout_width="@dimen/_25dp_normal_iconSize"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15_flight_dp"
                                android:layout_marginRight="@dimen/_5_flight_dp"
                                android:gravity="center|right"
                                android:text="24"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_21dp_margin"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:layout_marginLeft="@dimen/_10dp_margin"
                    android:layout_marginRight="@dimen/_10dp_margin"
                    android:layout_marginTop="@dimen/_7_flight_dp"
                    android:background="@color/hotel_detail_background"
                    card_view:cardCornerRadius="@dimen/_10_flight_dp"
                    card_view:cardBackgroundColor="#ffffff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tarikh_az"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/_10dp_margin"
                            android:text="@string/departure_date"
                            android:textAppearance="@style/IrsansBold"
                            android:textColor="@color/text_color_2"
                            android:textSize="@dimen/_12dp_normal_textSize"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/tarikh_az_picker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15_flight_dp"

                                android:gravity="center|right"
                                android:text="@string/please_select_one"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_12dp_normal_textSize"/>
                            <TextView
                                android:id="@+id/tarikh_az_picker_day"
                                android:layout_width="@dimen/_25dp_normal_iconSize"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15_flight_dp"
                                android:layout_marginRight="@dimen/_5_flight_dp"
                                android:gravity="center|right"
                                android:text="24"
                                android:textColor="@color/text_color_2"
                                android:textSize="@dimen/_21dp_margin"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <!--counte-->
        <LinearLayout
            android:id="@+id/lnr_pass_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginBottom="@dimen/_5_flight_dp"
            android:layout_marginTop="@dimen/_14dp_txtSize"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_7_flight_dp"
                android:background="@color/hotel_detail_background"
                card_view:cardCornerRadius="@dimen/_10_flight_dp"
                card_view:cardBackgroundColor="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="@dimen/_5_flight_dp"
                    android:layout_marginTop="@dimen/_5_flight_dp"

                    android:layout_gravity="right"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/txtPassInf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text="@string/newborn"
                        android:textColor="@color/grayTxt"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text=" , "
                        android:textColor="@color/grayTxt"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView
                        android:id="@+id/txtPassChild"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text="@string/baby"
                        android:textColor="@color/grayTxt"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:gravity="center"
                        android:text=" , "
                        android:textColor="@color/grayTxt"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />
                    <TextView
                        android:id="@+id/txtPassAdult"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5_flight_dp"

                        android:gravity="center"
                        android:text="@string/adault"
                        android:textColor="@color/grayTxt"
                        android:textSize="@dimen/_12dp_normal_textSize"

                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!--class flight-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginBottom="@dimen/_5_flight_dp"
            android:layout_marginTop="@dimen/_14dp_txtSize"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_marginTop="@dimen/_5_flight_dp"
                android:layout_weight="60"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtPassMen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/background_strock_gray_curv_narrow"
                    android:gravity="center"
                    android:text="ویژه برادران"
                    android:textColor="@color/grayBB"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"
                    />
                <TextView
                    android:id="@+id/txtPassWom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/background_strock_gray_curv_narrow"
                    android:gravity="center"
                    android:text="ویژه خواهران"
                    android:textColor="@color/grayBB"
                    android:layout_marginRight="@dimen/_5_flight_dp"
                    android:layout_marginLeft="@dimen/_5_flight_dp"
                    android:textSize="@dimen/_12dp_normal_textSize"
                    android:shadowColor="@android:color/white"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"
                    />
                <TextView
                    android:id="@+id/txtPassNat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/background_strock_blue_light"
                    android:gravity="center"
                    android:text="مسافرین عادی"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12dp_normal_textSize"

                    />

            </LinearLayout>
        </LinearLayout>
        <!--coupe darbast-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginBottom="@dimen/_5_flight_dp"
            android:layout_marginTop="@dimen/_14dp_txtSize"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5_flight_dp"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:layout_weight="60"
                android:gravity="center">

                <CheckBox

                    android:id="@+id/rd_darbast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="کوپه دربست"
                    android:textColor="@color/grayTxt"
                    android:textSize="@dimen/_10dp_textSize" />


            </LinearLayout>
        </LinearLayout>
        <!--button search-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginBottom="@dimen/_5_flight_dp"
            android:layout_marginTop="@dimen/_14dp_txtSize"
            android:layout_marginLeft="@dimen/_10dp_margin"
            android:layout_marginRight="@dimen/_10dp_margin"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10dp_margin"
                android:layout_marginRight="@dimen/_10dp_margin"
                android:background="@drawable/button_shape"
                android:gravity="center">

                <TextView
                    android:id="@+id/searchTrain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/search"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16dp_normal_textSize" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>