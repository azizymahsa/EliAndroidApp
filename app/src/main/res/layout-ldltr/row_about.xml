<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_imageAddress"
            android:layout_width="wrap_content"
            android:layout_height="113dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/alert" />


        <com.eligasht.reservation.tools.JustifiedTextView
            android:id="@+id/txtSectionName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="@dimen/_12dp"
            android:gravity="left"
            android:text=""
            android:textColor="#000000"
            android:visibility="gone"/>

        <com.eligasht.reservation.tools.JustifiedTextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/_12dp"
            android:text=""
android:visibility="gone"

            />
        <TextView
            android:id="@+id/txtSectionNameEn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="@dimen/_12dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|center"
            android:text="fish name"
            android:textColor="#000000"
            android:textSize="@dimen/_15dp_normal_textSize"/>

        <!--<TextView
            android:id="@+id/txtDescriptionEn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical|center"
            android:padding="@dimen/_12dp"
            android:text="TextView"
            android:justificationMode="inter_word"


            />-->
        <WebView
            android:id="@+id/txtDescriptionEn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            tools:ignore="WebViewLayout" />
    </LinearLayout>


</LinearLayout>