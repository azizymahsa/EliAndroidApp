<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlRoot"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:gravity="right"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btnBack"
                    style="@style/fancy_toolbar"
                    android:layout_width="@dimen/toolbar_bottom_width_50dp"
                    android:layout_height="@dimen/toolbar_bottom_width_50dp"
                    android:layout_gravity="left"
                    android:visibility="visible"
                    fancy:fb_radius="200dp"
                    fancy:fb_textSize="@dimen/_20dp_normal_textSize" />

            </LinearLayout>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5dp_margin"
                android:text="@string/_survey"
                android:textAppearance="@style/fontello_flight"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18dp_ff" />
        </RelativeLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            style="@style/CustomTabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5_flight_dp"
            android:layout_gravity="left"
            app:tabGravity="fill"
            android:background="@color/toolbar_color"
            app:tabTextAppearance="@style/AppTabTextAppearance"
            app:tabMode="fixed"/>
       <!-- <android.support.v4.view.ViewPager
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_below=>


        </android.support.v4.view.ViewPager>-->
        <com.eligasht.reservation.views.activities.new_survey.NonSwipeableViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_45_profile"
        android:layout_marginLeft="@dimen/_18dp_ff"
        android:layout_marginRight="@dimen/_18dp_ff"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp_normal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"

            android:background="@drawable/background_strock_blue_purple_out"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="left|center_vertical"
                android:text="@string/arrow_left"
                android:textAppearance="@style/IconFonts"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtPrev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/_prev_question"
                android:textAppearance="@style/fontello_flight"
                android:textColor="#6422F9"
                android:textSize="@dimen/_15dp_normal_textSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp_normal"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5_flight_dp"
            android:background="@drawable/background_strock_blue_purple"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvSortIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="left|center_vertical"
                android:text="@string/arrow_left"
                android:textAppearance="@style/IconFonts"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtNext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/_new_answer"
                android:textAppearance="@style/fontello_flight"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15dp_normal_textSize" />
        </LinearLayout>

    </LinearLayout>

    <!--<Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5_flight_dp"
        android:layout_marginRight="@dimen/_5_flight_dp"
        android:background="@drawable/background_strock_purple"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="@string/_next_answer" />-->
</RelativeLayout>