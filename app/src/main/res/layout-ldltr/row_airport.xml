<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/_2dp_margin"
    android:layout_marginLeft="@dimen/_5_flight_dp"
    android:layout_marginRight="@dimen/_5_flight_dp"
    android:visibility="visible"


    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lnrAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/fronttop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5_flight_dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:gravity="center"
                android:minHeight="40dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!--top-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2dp_margin"
                        android:layout_marginRight="@dimen/_2dp_margin"
                        android:layout_marginBottom="@dimen/_2dp_margin"
                        android:layout_marginTop="@dimen/_8dp_normal_margin"
                        >


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="left|center">
                            <TextView
                                android:id="@+id/txtTag"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_5_flight_dp"
                                android:padding="@dimen/_1dp_flight"
                                android:gravity="center"
                                android:text="@string/_Popular"

                                android:textColor="#b3b3b3"
                                android:background="@drawable/background_strock_gray"
                                android:textAppearance="@style/IrsansBold"
                                android:textSize="@dimen/_10dp_textSize"
                                android:visibility="invisible" />


                        </LinearLayout>

                        <!--<TextView

                            android:id="@+id/txtShortDes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10dpTabletSize"
                            android:text="1h 55 m"
                            android:textColor="@color/train_gray"
                            android:textAppearance="@style/IrsansBold"
                            android:visibility="invisible"
                            android:textSize="@dimen/_14dp_txtSize" />-->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="4"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="right|center_vertical"
                                android:gravity="right"
                                android:text="dsdsf"
                                android:textColor="#474747"
                                android:maxLines="1"
                                android:textAppearance="@style/IrsansBold"
                                android:textSize="@dimen/_14dp_txtSize" />


                        </LinearLayout>


                    </LinearLayout>




                    <!--bottom-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2dp_margin">





                        <LinearLayout
                            android:layout_width="@dimen/_10dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="2"
                            android:gravity="right">
                            <TextView

                                android:id="@+id/txtLongdes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|center_vertical"
                                android:layout_weight="1.75"
                                android:gravity="right"
                                android:singleLine="true"
                                android:text="fish name"
                                android:textColor="#8c8c8c"
                                android:layout_marginRight="@dimen/_2dp_margin"
                                android:textSize="@dimen/_13dp_normal_textSize"
                                android:visibility="gone" />
                            <TextView
                                android:id="@+id/txtIcon"
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="match_parent"
                                android:gravity="right|center"
                                android:text="&#46;"
                                android:layout_marginBottom="@dimen/_3dp_margin_comment"
                                android:textAppearance="@style/IconMenuFantastic"
                                android:textColor="#8c8c8c"
                                android:textSize="20dp"
                                android:visibility="gone"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="5"

                    >

                    <TextView
                        android:id="@+id/txtIconBaseFantastic"
                        android:layout_width="@dimen/_40dp_f"
                        android:layout_height="@dimen/_40dp_f"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textAppearance="@style/IconMenuFantastic"
                        android:textColor="@color/train_gray"
                        android:textSize="@dimen/_25dp_normal_iconSize"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/txtIconBaseLocation"
                        android:layout_width="@dimen/_40dp_f"
                        android:layout_height="@dimen/_40dp_f"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/icon_location2"
                        android:textAppearance="@style/IconFonts"
                        android:textColor="#888"
                        android:textSize="@dimen/_25dp_normal_iconSize"
                        android:visibility="gone"
                        />

                    <!--</RelativeLayout>-->
                </RelativeLayout>
                <!--space in child-->
                <RelativeLayout
                    android:id="@+id/rvSpace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="5"

                    >

                    <TextView

                        android:layout_width="@dimen/_40dp_f"
                        android:layout_height="@dimen/_40dp_f"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textAppearance="@style/IconMenuFantastic"
                        android:textColor="#888"
                        android:textSize="@dimen/_30dp_flight" />
                    <TextView

                        android:layout_width="@dimen/_40dp_f"
                        android:layout_height="@dimen/_40dp_f"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/icon_location2"
                        android:textAppearance="@style/IconFonts"
                        android:textColor="#888"
                        android:textSize="@dimen/_30dp_flight"
                        android:visibility="gone"
                        />


                </RelativeLayout>
            </LinearLayout>
            <!-- ////////////////////////////front bottom///////////////////////////////////// -->


        </LinearLayout>
        <View android:background="@color/gray_light"
            android:layout_width = "match_parent"
            android:layout_marginTop="@dimen/_5_flight_dp"
            android:layout_height="1dp"/>
    </LinearLayout>

</LinearLayout>
