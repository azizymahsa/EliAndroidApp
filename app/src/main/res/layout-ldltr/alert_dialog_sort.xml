<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_centerInParent="true"
        android:background="@color/n_blue_btn"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:text="@string/Sort"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/white"
        android:textSize="@dimen/_16dp_txtSize"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10dp_margin"
            android:text="@string/SortMax"
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_14dp_txtSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorR" />

        <TextView
            android:id="@+id/tvMin"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10dp_margin"
            android:text="@string/SortMin"
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_14dp_txtSize" />


    </LinearLayout>
</LinearLayout>

