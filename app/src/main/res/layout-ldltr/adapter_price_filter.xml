<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_price_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:padding="@dimen/_5sp_padding">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sp_padding"
            android:text="@string/curency"
            android:textColor="@color/green"
            android:textSize="@dimen/_13dp_normal_textSize" />


        <TextView
            android:id="@+id/txt_price_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sp_padding"
            android:text="1000,000"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_13dp_normal_textSize" />

        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/chk_price_filter"
            android:layout_width="@dimen/_25dp_normal_iconSize"
            android:layout_height="@dimen/_25dp_normal_iconSize"
            android:layout_marginLeft="@dimen/_5dp_margin"
            android:layout_marginRight="20dp"
            app:color_checked="@color/app_base_color" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dark" />

</LinearLayout>