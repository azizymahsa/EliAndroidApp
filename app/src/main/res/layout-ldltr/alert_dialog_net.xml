<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_centerInParent="true"
        android:background="@color/n_blue_btn"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/NoInternet"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/white"
        android:textSize="@dimen/_16dp_txtSize"

        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="10dp"
        />



    <TextView
        android:id="@+id/tvAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/AlertInternetError"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/text_color_4d"
        android:textSize="@dimen/_12dp_normal_textSize" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10dp_margin"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnWifi"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:elevation="1dp"
            android:paddingBottom="1dp"
            fancy:fb_defaultColor="@color/n_blue_btn"
            fancy:fb_focusColor="@color/focusColor"
            fancy:fb_radius="100dp"
            fancy:fb_text="@string/wifi"
            fancy:fb_textColor="#fff"
            fancy:fb_textSize="@dimen/_14dp_txtSize" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnMobileData"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:elevation="1dp"
            android:paddingBottom="1dp"
            fancy:fb_defaultColor="@color/n_blue_btn"
            fancy:fb_focusColor="@color/focusColor"
            fancy:fb_radius="100dp"
            fancy:fb_text="@string/Data"
            fancy:fb_textColor="#fff"
            fancy:fb_textSize="@dimen/_14dp_txtSize" />

    </LinearLayout>


</LinearLayout>