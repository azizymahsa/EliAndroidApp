<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp_fh_"
    android:layout_margin="@dimen/_20dp_margin_p"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="@string/icon_location2"
                android:textAppearance="@style/IconFonts"
                android:textColor="@color/app_base_color"
                android:textSize="@dimen/icon_size_25dp" />
            <TextView
                android:id="@+id/name"

                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="fish name"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textAppearance="@style/IrsansBold"
                android:textSize="@dimen/_14dp_txtSize"/>




        </LinearLayout>

    </LinearLayout>

