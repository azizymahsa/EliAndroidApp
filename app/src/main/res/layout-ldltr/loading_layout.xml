<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlLoading"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hotel_loading"
        android:scaleType="fitXY"
        android:visibility="gone"/>

    <ImageView

        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_50_flight_dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo_new"
        android:visibility="visible" />

    <com.wang.avi.AVLoadingIndicatorView

        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_175dp_package"
        android:visibility="visible"
        app:indicatorColor="#152b5a"
        app:indicatorName="BallSpinFadeLoaderIndicator" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14dp_txtSize"
        android:layout_below="@+id/avi"
        android:text="@string/please_wating"
        android:gravity="center"
        android:textColor="@color/train_gray"
        android:textSize="@dimen/_14dp_txtSize"
        android:textStyle="bold"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="@dimen/toolbar_height_70dp"
        android:layout_height="@dimen/toolbar_height_70dp"
        android:layout_below="@+id/flLoading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"
        />



    <FrameLayout
        android:id="@+id/flLoading"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50dp">
        <TextView

            android:id="@+id/tvLoading"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="4"
            android:textColor="@color/white"
            android:textSize="@dimen/_16dp_txtSize" />
    </FrameLayout>



</RelativeLayout>