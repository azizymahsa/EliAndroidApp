<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/dialog_opener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp_margin"
                android:clickable="true"


                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10_flight_dp"
                    android:layout_marginRight="@dimen/_10_flight_dp"
                    android:src="@drawable/ic_language_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/language"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:gravity="center"
                        android:text="@string/text1"
                        android:textColor="#000"
                        android:textSize="@dimen/title_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:layout_marginTop="@dimen/margin_top"
                        android:gravity="center"
                        android:text="@string/text2"
                        android:textColor="#969292"
                        android:textSize="@dimen/detail_setting" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#bab6b6" />

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"


                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10_flight_dp"
                    android:layout_marginRight="@dimen/_10_flight_dp"
                    android:src="@drawable/ic_attach_money_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/language"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:gravity="center"
                        android:text="@string/text3"
                        android:textColor="#000"
                        android:textSize="@dimen/title_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:layout_marginTop="@dimen/margin_top"
                        android:gravity="center"
                        android:text="@string/text4"
                        android:textColor="#969292"
                        android:textSize="@dimen/detail_setting" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#bab6b6" />

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"


                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10_flight_dp"
                    android:layout_marginRight="@dimen/_10_flight_dp"
                    android:src="@drawable/ic_home_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/language"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:gravity="center"
                        android:text="@string/text5"
                        android:textColor="#000"
                        android:textSize="@dimen/title_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/setting_margin"
                        android:layout_marginLeft="@dimen/setting_margin"
                        android:layout_marginRight="@dimen/setting_margin"
                        android:layout_marginStart="@dimen/setting_margin"
                        android:layout_marginTop="@dimen/margin_top"
                        android:gravity="center"
                        android:text="@string/text6"
                        android:textColor="#969292"
                        android:textSize="@dimen/detail_setting" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#bab6b6" />

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/shadow" />


</RelativeLayout>
