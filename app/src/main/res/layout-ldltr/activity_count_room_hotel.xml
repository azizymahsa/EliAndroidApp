<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_room"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_strock_blue_dark"
            android:drawableRight="@drawable/hotel_padding_drawable"
            android:gravity="center"
            android:paddingLeft="90dp"
            android:shadowColor="#cccccc"

            android:shadowDx="-2"
            android:shadowDy="-2"
            android:text="اضافه کردن اتاق "
            android:textColor="#000099"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="10dp">

        <ListView
            android:id="@+id/listCityHotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_strokk"


            />
        <!--  android:dividerHeight="1dp" -->
    </LinearLayout>

</LinearLayout>
