<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200dp"
                android:background="@drawable/about_us_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:orientation="vertical">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnBack"
                        style="@style/fancy_toolbar"
                        android:layout_width="@dimen/_50dp_normal"
                        android:layout_height="@dimen/_50dp_normal"
                        android:layout_gravity="left"
                        android:visibility="visible"
                        fancy:fb_radius="200dp"
                        fancy:fb_textSize="@dimen/_20dp_normal_textSize" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_tree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative"
                android:layout_marginTop="@dimen/_12dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/hotel_detail_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1200"
                            android:textColor="#2e3192"
                            android:textSize="@dimen/text_size" />

                        <TextView

                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/city_for_aboutus"
                            android:gravity="center"
                            android:text=" " />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5dp_margin"
                            android:gravity="center"
                            android:text="@string/cities_all_over_the_world"
                            android:textColor="#2e3192"
                            android:textSize="@dimen/_aboutdp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/hotel_detail_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="900"
                            android:textColor="#2e3192"
                            android:textSize="@dimen/text_size" />

                        <TextView

                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/plane_for_about_us"
                            android:gravity="center"
                            android:text=" " />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5dp_margin"
                            android:gravity="center"
                            android:text="@string/confirmed_airlines"
                            android:textColor="#2e3192"
                            android:textSize="@dimen/_aboutdp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!-- /////////////////////////////// -->
                <android.support.v7.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/hotel_detail_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="20000"
                            android:textColor="#2e3192"
                            android:textSize="@dimen/text_size" />

                        <TextView

                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hotel_for_aboutus"
                            android:gravity="center"
                            android:text=" " />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5dp_margin"
                            android:gravity="center"
                            android:text="@string/hotels_all_over_the_world"
                            android:textColor="#2e3192"
                            android:textSize="@dimen/_aboutdp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <!-- /////////////////////////////// -->


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_tree"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="100"
                android:background="@color/hotel_detail_background"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/_50dp_normal"
                            android:layout_height="1dp"
                            android:background="#2e3192" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/about_us"
                            android:textColor="#2e3192"
                            android:textSize="@dimen/_25dp" />

                        <View
                            android:layout_width="@dimen/_50dp_normal"
                            android:layout_height="1dp"
                            android:background="#2e3192" />
                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <com.eligasht.reservation.tools.NonScrollRecyclerView
                android:id="@+id/lvExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:cacheColorHint="#00000000" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>