<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_header_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:text="@string/SelectFilter"
        android:textAppearance="@style/IrsansBold"
        android:textColor="@color/white"
        android:textSize="@dimen/_16dp_txtSize"

        />
    <ScrollView
        android:id="@+id/scrollViewObject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400dp"
        android:fillViewport="true">
    <LinearLayout
        android:id="@+id/linearViewObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTavaghof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Stop"
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_14dp_txtSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/TwoStopAndMore"
                    android:textSize="@dimen/_12dp_normal_textSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/twoStopMore"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/OneStop"
                    android:textSize="@dimen/_12dp_normal_textSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/oneStop"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/NonStop"
                    android:textSize="@dimen/_12dp_normal_textSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/noStop"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/class_flight"
            android:textAppearance="@style/IrsansBold"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/first"
                    android:textSize="@dimen/_12dp_normal_textSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/ferstF"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/Business"
                    android:textSize="@dimen/_12dp_normal_textSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/businessF"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/Economi"
                    android:textSize="@dimen/_12dp_normal_textSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/economiF"
                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ساعت حرکت"
            android:textAppearance="@style/IrsansBold"
            android:textSize="14dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_14dp_txtSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/resort"

                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="   "
                    android:textSize="@dimen/_14dp_txtSize" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/boutique"

                    android:layout_width="@dimen/_25dp_normal_iconSize"
                    android:layout_height="@dimen/_25dp_normal_iconSize"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/AirLine"
            android:textAppearance="@style/IrsansBold"
            android:textColor="@color/text_color_4d"
            android:textSize="@dimen/_14dp_txtSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center">

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="100"

                android:gravity="center">


                <com.eligasht.reservation.views.adapters.hotel.rooms.NonScrollListView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"

                    android:layout_marginTop="2dp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="حذف فیلتر"
                    android:textSize="14dp" />

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/Remove"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    app:color_checked="@color/app_base_color" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp_margin"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnDeletFilter"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:elevation="1dp"
                android:paddingBottom="1dp"
                fancy:fb_defaultColor="#1234"
                fancy:fb_focusColor="@color/focusColor"
                fancy:fb_radius="100dp"
                fancy:fb_text="@string/RemoveFilter"
                fancy:fb_textColor="#4d4d4d"
                fancy:fb_textSize="@dimen/_14dp_txtSize" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:elevation="1dp"
                android:paddingBottom="1dp"
                fancy:fb_defaultColor="#1234"
                fancy:fb_focusColor="@color/focusColor"
                fancy:fb_radius="100dp"
                fancy:fb_text="@string/FilterConfirm"
                fancy:fb_textColor="#4d4d4d"
                fancy:fb_textSize="@dimen/_14dp_txtSize" />
        </LinearLayout>


</LinearLayout>