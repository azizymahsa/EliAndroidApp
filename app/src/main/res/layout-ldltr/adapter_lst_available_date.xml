<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"

    >

    <TextView
        android:id="@+id/txt_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/_10dp_margin"
        android:paddingLeft="@dimen/_10dp_margin"
        android:paddingRight="@dimen/_10dp_margin"
        android:paddingTop="@dimen/_10dp_margin"
        android:text="@string/coming_soon"
        android:textAppearance="@style/IrsansBold"
        android:textColor="#878787"
        android:textSize="@dimen/_12dp_normal_textSize" />

    <LinearLayout
        android:id="@+id/layout_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_depart_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grey_with_stroke"
            android:gravity="center"
            android:padding="@dimen/_5sp_padding"
            android:text="1"
            android:textColor="#5f5e5e"
            android:textSize="@dimen/_10dp" />

        <LinearLayout
            android:id="@+id/view_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_with_stroke"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_airLine"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
