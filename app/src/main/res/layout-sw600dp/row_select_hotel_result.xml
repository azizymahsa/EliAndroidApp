	       <LinearLayout
	           android:id="@+id/linearLayout1"
	           android:layout_width="wrap_content"
	           android:layout_height="50dp"
	           android:layout_alignParentLeft="true"
	           android:layout_alignParentRight="true"
	           android:layout_alignParentTop="true"
	           android:orientation="horizontal" >

	           <TextView
	               android:id="@+id/tv_name_hotel"
	               android:layout_width="wrap_content"
	               android:layout_height="match_parent"
	               android:layout_gravity="center_vertical"
	               android:layout_weight="0.14"
	               android:gravity="center_horizontal|fill_vertical"
	               android:text="Grand Hotel"
	               android:textSize="30dp"
	               android:textColor="#fff" />

	           <TextView
	               android:id="@+id/textView2"
	               android:layout_width="wrap_content"
	               android:layout_height="match_parent"
	               android:layout_gravity="center_vertical"
	               android:layout_marginLeft="5dp"
	               android:layout_marginRight="5dp"
	               android:layout_weight="1.32"
	               android:gravity="center_horizontal|fill_vertical"
	               android:text="special categoury"
	               android:textSize="20dp" 
	               android:visibility="invisible"/>

	           <RatingBar
	               android:id="@+id/ratingBarSmall"
	               style="?android:attr/ratingBarStyleSmall"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_gravity="center_vertical"
	               android:rating=".5" />

	       </LinearLayout>

	       <LinearLayout
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_below="@+id/linearLayout1"
	           android:layout_marginLeft="15dp"
	           android:layout_weight="0.15"
	           android:orientation="horizontal" >

	           <TextView
	               android:id="@+id/textView1"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:background="@drawable/location_hotel"
	               android:text="" />

	           <TextView
	               android:id="@+id/textView3"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="5dp"
	               android:layout_weight="0.91"
	               android:text="استانبول,بی اغلو"
	               android:textColor="#fff"
	               android:textSize="20dp" />
	       </LinearLayout>

	   </RelativeLayout>
	         
	    </LinearLayout>

         <LinearLayout
             android:id="@+id/frontbottom"
             style="@style/MyListFrontContentRe"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="12dp"
             android:layout_marginTop="12dp"
             android:background="@drawable/shadowbox"
             android:gravity="center"
             android:minHeight="40dp"
             android:orientation="horizontal" >

             <LinearLayout
                 android:id="@+id/linearLayout1w"
                 android:layout_width="0dip"
                 android:layout_height="match_parent"
                 android:layout_gravity="right"
                 android:layout_marginLeft="4dp"
                 android:layout_marginRight="3dip"
                 android:layout_weight="0.83"
                 android:background="#fff"
                 android:gravity="right"
                 android:orientation="vertical" >

                 <TextView
                     android:id="@+id/lblCityMaghsadBargasht"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="left"
                     android:text="1*Double Economy"
                     android:textColor="#a6a6a6"
                     android:textSize="19dip" />

                 <TextView
                     android:id="@+id/lblDateMaghsadBargasht"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="left"
                     android:text="10,000,000"
                     android:textColor="#000000"
                     android:textSize="22dp" />
             </LinearLayout>

             <TextView
                 android:id="@+id/lblProductroww"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="12dp"
                 android:background="@drawable/flash_to_right"
                 android:gravity="center"
                 android:text=""
                 android:textColor="#FFFFFF"
                 android:textSize="12sp" />

         </LinearLayout>
	      
    </LinearLayout>
