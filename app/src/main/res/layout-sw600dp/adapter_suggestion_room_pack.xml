<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/cvHotel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:background="@color/hotel_detail_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_suggestion_room"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_info_person_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/price_adault"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="35dp" />
                        <TextView
                            android:id="@+id/text_adault"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="35dp"
                            android:gravity="right"
                            android:text="بزرگسال"
                            android:padding="6sp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_child"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp" />
                        <TextView
                            android:id="@+id/price_child"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                   android:id="@+id/layout_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="ریال"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>